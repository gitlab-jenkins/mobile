<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/back"
                android:onClick="backActionBar"
                android:padding="12dp"/>

            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                geekui:customTypeface="fonts/vazir_regular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_origin"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:text="@string/invoice_payment_confirm"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/app_origin" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:id="@+id/paymentScroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_gravity="right"
                        android:layout_margin="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="right"
                            android:layout_marginRight="2dp">

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                android:id="@+id/billsName"
                                geekui:customTypeface="fonts/vazir_regular.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/main_menu_title"
                                android:textSize="15sp" />

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                android:id="@+id/billsDate"
                                geekui:customTypeface="fonts/vazir_regular.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/main_menu_title"
                                android:textSize="13dp"
                                android:gravity="right"
                                android:layout_gravity="right"
                                android:layout_alignParentRight="true"/>

                        </LinearLayout>


                        <ImageView
                            android:id="@+id/billsImage"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/user_placeholder"
                            android:scaleType="fitXY"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:visibility="visible">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:background="#f5f5f5">

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                geekui:customTypeface="fonts/vazir_regular.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/account_details_text"
                                android:textSize="15sp"
                                android:text="@string/bills_service_id"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="2dp">

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    android:id="@+id/billsId"
                                    geekui:customTypeface="fonts/vazir_regular_bold.ttf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/account_details_text"
                                    android:textSize="15sp"
                                    android:layout_marginLeft="2dp"/>

                            </LinearLayout>




                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp">

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                geekui:customTypeface="fonts/vazir_regular.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/account_details_text"
                                android:textSize="15sp"
                                android:text="@string/bills_service_payment"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="2dp">

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    android:id="@+id/payId"
                                    geekui:customTypeface="fonts/vazir_regular_bold.ttf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/account_details_text"
                                    android:textSize="15sp"
                                    android:layout_marginLeft="2dp"/>

                            </LinearLayout>




                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:background="#f5f5f5">

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                geekui:customTypeface="fonts/vazir_regular.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/account_details_text"
                                android:textSize="15sp"
                                android:text="@string/request_payment_rial"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="2dp">

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    geekui:customTypeface="fonts/vazir_regular.ttf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/account_details_text"
                                    android:textSize="14sp"
                                    android:text="@string/currency_rials"/>

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    android:id="@+id/billsAmount"
                                    geekui:customTypeface="fonts/vazir_regular_bold.ttf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/account_details_text"
                                    android:textSize="20sp"
                                    android:layout_marginLeft="2dp"/>

                            </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp">

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                geekui:customTypeface="fonts/vazir_regular.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/account_details_text"
                                android:textSize="15sp"
                                android:text="@string/request_payment_fee"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="2dp">

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    geekui:customTypeface="fonts/vazir_regular.ttf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/account_details_text"
                                    android:textSize="14sp"
                                    android:text="@string/currency_rials"/>

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    android:id="@+id/hampayFee"
                                    geekui:customTypeface="fonts/vazir_regular_bold.ttf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/account_details_text"
                                    android:textSize="15sp"
                                    android:layout_marginLeft="2dp"/>

                            </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:padding="8dp"
                            android:background="#f5f5f5">

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                geekui:customTypeface="fonts/vazir_regular_bold.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/page_title"
                                android:textSize="22sp"
                                android:text="@string/request_payment_total"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="2dp">

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    geekui:customTypeface="fonts/vazir_regular.ttf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/page_title"
                                    android:textSize="14sp"
                                    android:text="@string/currency_rials"/>

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    android:id="@+id/billsTotalAmount"
                                    geekui:customTypeface="fonts/vazir_regular_bold.ttf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/page_title"
                                    android:textSize="22sp"
                                    android:layout_marginLeft="2dp"/>

                            </LinearLayout>




                        </RelativeLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/creditInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:visibility="visible">

                        <RelativeLayout
                            android:id="@+id/cardPlaceHolder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/card_select_placeholder">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/select_card"
                                android:background="@color/app_origin"
                                android:layout_margin="2dp"
                                android:layout_alignParentRight="true"
                                android:padding="4dp"/>

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                android:id="@+id/selectCardText"
                                geekui:customTypeface="fonts/vazir_regular.ttf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/app_origin"
                                android:textSize="12dp"
                                android:text="@string/select_card_number"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="50dp"
                                android:visibility="visible"
                                android:padding="4dp"/>

                            <LinearLayout
                                android:id="@+id/cardSelect"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:orientation="vertical"
                                android:padding="4dp"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="50dp"
                                android:visibility="gone">

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    android:id="@+id/bankName"
                                    geekui:customTypeface="fonts/vazir_regular.ttf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/app_origin"
                                    android:textSize="13dp"
                                    android:text="@string/bank"
                                    android:layout_gravity="right"
                                    android:layout_alignParentRight="true"/>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <include layout="@layout/masked_card_number"/>

                                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                        android:id="@+id/cardNumberValue"
                                        geekui:customTypeface="fonts/vazir_regular.ttf"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@android:color/black"
                                        android:textSize="15dp"
                                        android:layout_marginRight="8dp" />
                                </LinearLayout>

                            </LinearLayout>

                        </RelativeLayout>

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            geekui:customTypeface="fonts/vazir_regular.ttf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/app_origin"
                            android:textSize="11dp"
                            android:text="@string/shaparak_privacy_message"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="8dp"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:id="@+id/pin_layout"
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="0.75"
                                android:background="@drawable/card_info_empty_placeholder"
                                android:layout_margin="1dp">

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    android:id="@+id/pin_text"
                                    geekui:customTypeface="fonts/vazir_regular.ttf"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textSize="15dp"
                                    android:textColor="@color/account_details_text"
                                    android:singleLine="true"
                                    android:maxLength="20"
                                    android:inputType="number"
                                    android:background="@color/transparency"
                                    android:gravity="center"
                                    android:layout_centerVertical="true"
                                    android:hint="@string/user_pin2"/>

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/cvv_layout"
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="0.25"
                                android:background="@drawable/card_info_empty_placeholder"
                                android:layout_margin="1dp">

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    android:id="@+id/cvv_text"
                                    geekui:customTypeface="fonts/vazir_regular.ttf"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textSize="15dp"
                                    android:textColor="@color/account_details_text"
                                    android:singleLine="true"
                                    android:maxLength="4"
                                    android:inputType="number"
                                    android:background="@color/transparency"
                                    android:gravity="center"
                                    android:layout_centerVertical="true"
                                    android:hint="@string/user_cvv2"/>

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/pay_button"
                        android:layout_width="128dp"
                        android:layout_height="128dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/hampay_payment_button"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="160dp"/>

                </LinearLayout>


            </ScrollView>


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/keyboard"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <include
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/numeric_keyboard"/>
    </LinearLayout>

</RelativeLayout>
