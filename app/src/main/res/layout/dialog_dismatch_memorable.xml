<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:background="@drawable/dialog_pay_theme"
    android:orientation="vertical"
    android:padding="8dp">


    <com.hampay.mobile.android.component.FacedTextView
        geekui:customTypeface="fonts/iran_sans.ttf"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/normal_text"
        android:textSize="15dp"
        android:text="@string/dismatch_memorable"
        android:gravity="right"
        android:layout_gravity="right"
        android:layout_margin="8dp"/>



    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <com.hampay.mobile.android.component.FacedTextView
            android:id="@+id/retry_memorable"
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textColor="@color/pay_disconfirm"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="@string/retry_memorable" />

    </RelativeLayout>

</LinearLayout>