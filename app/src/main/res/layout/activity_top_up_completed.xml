<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            android:id="@+id/payment_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/main_fragment_banner" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:src="@drawable/payment_success" />


            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="@string/msg_payment_success"
                android:textColor="@android:color/white"
                android:textSize="16dp"
                geekui:customTypeface="fonts/vazir_regular.ttf" />

        </LinearLayout>

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="@string/payment_info"
                android:textColor="@color/app_origin"
                android:textSize="16dp"
                geekui:customTypeface="fonts/vazir_regular.ttf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="24dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            android:layout_width="28dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/currency_rials"
                            android:textColor="@color/main_menu_title"
                            android:textSize="13dp"
                            geekui:customTypeface="fonts/vazir_regular.ttf" />

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            android:id="@+id/amount_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/app_origin"
                            android:textSize="15dp"
                            geekui:customTypeface="fonts/vazir_regular_bold.ttf" />

                    </LinearLayout>


                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:text="@string/payment_success_amount"
                        android:textColor="@color/main_menu_title"
                        android:textSize="14dp"
                        geekui:customTypeface="fonts/vazir_regular.ttf" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/main_menu_title" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/tvCellPhoneOrChargeCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28dp"
                        android:gravity="center"
                        android:textColor="@color/main_menu_title"
                        android:textSize="15dp"
                        geekui:customTypeface="fonts/vazir_regular_bold.ttf" />

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/tvCellPhoneOrChargeCodeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:text="@string/cell_number"
                        android:textColor="@color/main_menu_title"
                        android:textSize="14dp"
                        geekui:customTypeface="fonts/vazir_regular.ttf" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/main_menu_title" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/trace_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28dp"
                        android:gravity="center"
                        android:textColor="@color/main_menu_title"
                        android:textSize="15dp"
                        geekui:customTypeface="fonts/vazir_regular_bold.ttf" />

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:text="@string/payment_success_trace"
                        android:textColor="@color/main_menu_title"
                        android:textSize="14dp"
                        geekui:customTypeface="fonts/vazir_regular.ttf" />

                </RelativeLayout>

            </LinearLayout>

            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                android:id="@+id/confirm_button"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="@drawable/registration_button_style"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/payment_success_confirm"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                geekui:customTypeface="fonts/vazir_regular.ttf" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
