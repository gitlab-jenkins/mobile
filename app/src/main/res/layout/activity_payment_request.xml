<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:clickable="true"
            android:onClick="menu">

            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                android:id="@+id/selectedMenu"
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:text="@string/recent_payment_request" />

        </LinearLayout>

        <ImageView
            android:id="@+id/nav_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/back_actionbar"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:padding="12dp"
            android:clickable="true"
            android:onClick="backActionBar"/>

        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:text="@string/payment_request_title"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="64dp"/>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/hampay_rl"
            android:layout_width="0dip"
            android:layout_height="52dp"
            android:layout_weight="0.5">

            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                android:id="@+id/hampay_title"
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/normal_text"
                android:textSize="15dp"
                android:text="@string/hampay_contact_list"
                android:layout_centerInParent="true"/>

            <View
                android:id="@+id/hampay_sep"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:background="@color/normal_text"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/recent_rl"
            android:layout_width="0dip"
            android:layout_height="52dp"
            android:layout_weight="0.5">

            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                android:id="@+id/recent_title"
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/user_change_status"
                android:textSize="15dp"
                android:text="@string/recent_payment_request"
                android:layout_centerInParent="true"/>

            <View
                android:id="@+id/recent_sep"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:background="@color/user_change_status"/>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@drawable/entry_field_bg"
        android:layout_margin="18dp">


        <ImageView
            android:id="@+id/searchImage"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:src="@drawable/search_icon"
            android:layout_margin="12dp"/>

        <xyz.homapay.hampay.mobile.android.component.edittext.FacedEditText
            android:id="@+id/searchPhraseText"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@android:color/transparent"
            android:textSize="12dp"
            android:padding="6dp"
            android:textColor="@color/normal_text"
            android:hint="@string/pay_one_search_hint"
            android:singleLine="true"
            android:layout_marginLeft="48dp"
            android:imeOptions="actionSearch"
            android:contentDescription="search"/>


    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/entry_field_color"/>

    <ListView
        android:id="@+id/paymentRequestList"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>


</LinearLayout>
