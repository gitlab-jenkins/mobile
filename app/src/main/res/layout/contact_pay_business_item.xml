<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="right">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_margin="4dp">

        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            android:id="@+id/business_name"
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_marginRight="8dp"
            android:text="مجید زمانی"/>

        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            android:id="@+id/business_description"
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="13dp"
            android:gravity="center"
            android:layout_marginRight="8dp"
            android:text="مجید زمانی"/>

        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            android:id="@+id/business_phone_no"
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/normal_text"
            android:textSize="13dp"
            android:gravity="center"
            android:layout_marginRight="8dp"
            android:text="09126157905"/>

        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            android:id="@+id/business_hampay_id"
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/normal_text"
            android:textSize="13dp"
            android:gravity="center"
            android:layout_marginRight="8dp"
            android:text="09126157905"/>


    </LinearLayout>


    <ImageView
        android:id="@+id/business_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="4dp"/>


</LinearLayout>