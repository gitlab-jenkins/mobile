<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <com.hampay.mobile.android.component.FacedTextView
            android:id="@+id/business_name"
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_marginRight="8dp"
            android:text="مجید زمانی"/>

        <com.hampay.mobile.android.component.FacedTextView
            android:id="@+id/business_description"
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="13dp"
            android:gravity="center"
            android:layout_marginRight="8dp"
            android:text="مجید زمانی"/>

        <com.hampay.mobile.android.component.FacedTextView
            android:id="@+id/business_phone_no"
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/normal_text"
            android:textSize="13dp"
            android:gravity="center"
            android:layout_marginRight="8dp"
            android:text="09126157905"/>

        <com.hampay.mobile.android.component.FacedTextView
            android:id="@+id/business_hampay_id"
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/normal_text"
            android:textSize="13dp"
            android:gravity="center"
            android:layout_marginRight="8dp"
            android:text="09126157905"/>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true">


        <com.hampay.mobile.android.component.material.ButtonRectangle
            android:id="@+id/pay_to_business_button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:background="@color/register_btn_color"
            android:textSize="20sp" />

        <com.hampay.mobile.android.component.FacedTextView
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/select" />

    </RelativeLayout>


</RelativeLayout>