<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="xyz.homapay.hampay.mobile.android.activity.AppSliderActivity"
    android:background="#FFFFFF"
    xmlns:geekui="http://schemas.android.com/apk/res-auto">

    <android.support.v4.view.ViewPager
        android:id="@+id/sliding_into_app"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/layerdrawable"
        android:visibility="visible"
        android:contentDescription="slider"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="4dp">

            <ImageView
                android:id="@+id/indicator_1"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/slider_indicator_selected"
                android:layout_margin="4dp"/>

            <ImageView
                android:id="@+id/indicator_2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/slider_indicator_unselected"
                android:layout_margin="4dp"/>


            <ImageView
                android:id="@+id/indicator_3"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/slider_indicator_unselected"
                android:layout_margin="4dp"/>

            <ImageView
                android:id="@+id/indicator_4"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/slider_indicator_unselected"
                android:layout_margin="4dp"/>

            <ImageView
                android:id="@+id/indicator_5"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/slider_indicator_unselected"
                android:layout_margin="4dp"/>

        </LinearLayout>

        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            android:id="@+id/register_button"
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:textColor="@color/slider_button_text"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/register"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@drawable/slider_button_style"
            android:layout_marginTop="18dp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <ImageView
            android:id="@+id/image_splash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />


        <LinearLayout
            android:id="@+id/animate_logo_1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/intro_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                />


            <LinearLayout
                android:id="@+id/intro_title_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/intro_icon"
                android:visibility="invisible">

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    android:id="@+id/intro_text_1"
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:layout_margin="8dp"
                    android:text="@string/intro_1"
                    android:visibility="invisible"/>


            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/hampay_login_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/splash_bg_color"/>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/slider_hm"/>

            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                geekui:customTypeface="fonts/iran_sans_bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="24dp"
                android:text="@string/app_name"
                android:layout_marginTop="-10dp"/>


        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
