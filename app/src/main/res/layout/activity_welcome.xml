<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_welcome">


    <!--<ImageView-->
        <!--android:layout_width="250dp"-->
        <!--android:layout_height="200dp"-->
        <!--android:layout_centerInParent="true"-->
        <!--android:src="@drawable/intro_clouds_1"/>-->

    <ImageView
        android:id="@+id/cloud"
        android:layout_width="245dp"
        android:layout_height="260dp"
        android:src="@drawable/intro_clouds_1"
        android:layout_centerInParent="true"/>


    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/layoutDots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

        </LinearLayout>

        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            android:id="@+id/btn_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:text="@string/skip_slide"
            android:textColor="@color/app_origin"
            android:layout_centerVertical="true"
            android:layout_margin="6dp"
            geekui:customTypeface="fonts/vazir_regular.ttf" />

        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:text="@string/next_slide"
            android:textColor="@color/app_origin"
            android:layout_centerVertical="true"
            android:layout_margin="6dp"
            geekui:customTypeface="fonts/vazir_regular.ttf" />

    </RelativeLayout>

</RelativeLayout>