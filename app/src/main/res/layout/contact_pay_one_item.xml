<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/contact_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <com.hampay.mobile.android.component.FacedTextView
                android:id="@+id/contact_name"
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginRight="8dp"
                android:text="مجید زمانی"/>

            <com.hampay.mobile.android.component.FacedTextView
                android:id="@+id/contact_phone_no"
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_marginRight="8dp"
                android:text="09126157905"/>


        </LinearLayout>


        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true">


            <com.hampay.mobile.android.component.material.ButtonRectangle
                android:id="@+id/pay_to_one_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:background="@color/register_btn_color"
                android:textSize="16sp" />

            <com.hampay.mobile.android.component.FacedTextView
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/select" />

        </RelativeLayout>



