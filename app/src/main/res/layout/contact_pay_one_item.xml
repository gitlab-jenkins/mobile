<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/contact_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:padding="12dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right|center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true">

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    android:id="@+id/contact_name"
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginRight="8dp"
                    android:text="مجید زمانی"/>

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    android:id="@+id/contact_phone_no"
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:layout_marginRight="8dp"
                    android:text="09126157905"/>


            </LinearLayout>


            <xyz.homapay.hampay.mobile.android.component.circleimageview.CircleImageView
                android:id="@+id/image_profile"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:src="@drawable/user_icon_blak"
                app:civ_border="true"
                app:civ_borderColor="#FFFFFFFF"
                app:civ_borderWidth="1dp"
                app:civ_selector="true"
                app:civ_selectorColor="#4403a9f4"
                app:civ_selectorStrokeColor="#aa5677fc"
                app:civ_selectorStrokeWidth="1dp" />

        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/recent_rl"
        xmlns:geekui="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right">

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    android:id="@+id/user_name"
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:layout_marginRight="8dp"
                    android:text="دریافت"/>

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    android:id="@+id/user_phone"
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:layout_marginRight="8dp"
                    android:text="هومن امینی"/>


                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    android:id="@+id/message"
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/normal_text"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:layout_marginRight="8dp"
                    android:text="متن پیام"
                    android:contentDescription="pay_plus"/>



            </LinearLayout>

            <ImageView
                android:id="@+id/status_icon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/arrow_r"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/call_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/mob_icon"
                android:layout_margin="8dp"/>

            <ImageView
                android:id="@+id/pay_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/p_icon_blak"
                android:layout_margin="8dp" />

        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>