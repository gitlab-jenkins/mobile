    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/recent_rl"
        xmlns:geekui="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right">

                <com.hampay.mobile.android.component.FacedTextView
                    android:id="@+id/user_name"
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:layout_marginRight="8dp"
                    android:text="دریافت"/>

                <com.hampay.mobile.android.component.FacedTextView
                    android:id="@+id/user_phone"
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:layout_marginRight="8dp"
                    android:text="هومن امینی"/>


                <com.hampay.mobile.android.component.FacedTextView
                    android:id="@+id/message"
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/normal_text"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:layout_marginRight="8dp"
                    android:text="متن پیام"/>



            </LinearLayout>

            <ImageView
                android:id="@+id/status_icon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/arrow_r"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/call_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/mob_icon"
                android:layout_margin="8dp"/>

            <ImageView
                android:id="@+id/pay_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/p_icon_blak"
                android:layout_margin="8dp"/>

        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>