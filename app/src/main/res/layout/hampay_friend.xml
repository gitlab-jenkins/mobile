                    android:layout_gravity="center"/>

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/curve_images"/>

            </FrameLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>