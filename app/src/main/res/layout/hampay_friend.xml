<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/hampay_2_ll"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center_vertical|right"
            android:visibility="gone">

            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                android:id="@+id/hampay_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sss"
                android:textColor="@color/normal_text"
                android:textSize="14dp"
                geekui:customTypeface="fonts/vazir_regular.ttf" />

            <FrameLayout
                android:layout_width="32dp"
                android:layout_height="32dp">

                <ImageView
                    android:id="@+id/hampay_image_2"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/selected_contacts_placeholder" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/curve_images" />

            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/hampay_1_ll"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center_vertical|right"
            android:visibility="gone">

            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                android:id="@+id/hampay_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sss"
                android:textColor="@color/normal_text"
                android:textSize="14dp"
                geekui:customTypeface="fonts/vazir_regular.ttf" />

            <FrameLayout
                android:layout_width="32dp"
                android:layout_height="32dp">

                <ImageView
                    android:id="@+id/hampay_image_1"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/selected_contacts_placeholder" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/curve_images" />

            </FrameLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/hampay_4_ll"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center_vertical|right"
            android:visibility="gone">

            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                android:id="@+id/hampay_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sss"
                android:textColor="@color/normal_text"
                android:textSize="14dp"
                geekui:customTypeface="fonts/vazir_regular.ttf" />

            <FrameLayout
                android:layout_width="32dp"
                android:layout_height="32dp">

                <ImageView
                    android:id="@+id/hampay_image_4"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/selected_contacts_placeholder" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/curve_images" />

            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/hampay_3_ll"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center_vertical|right"
            android:visibility="gone">

            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                android:id="@+id/hampay_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sss"
                android:textColor="@color/normal_text"
                android:textSize="14dp"
                geekui:customTypeface="fonts/vazir_regular.ttf" />

            <FrameLayout
                android:layout_width="32dp"
                android:layout_height="32dp">

                <ImageView
                    android:id="@+id/hampay_image_3"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/selected_contacts_placeholder" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/curve_images" />

            </FrameLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>