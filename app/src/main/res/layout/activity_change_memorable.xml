<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary">

        <com.hampay.mobile.android.component.FacedTextView
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:text="@string/remember_phrase"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>

        <com.hampay.mobile.android.component.FacedTextView
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:text="@string/title_guide"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:onClick="contactUs"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:layout_margin="12dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="@drawable/stroke_bg">

        <com.hampay.mobile.android.component.FacedTextView
            android:id="@+id/memorable_text"
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/register_btn_color"
            android:textSize="13dp"
            android:text="@string/current_memorable"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"/>

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/step_icon_pass"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="17dp">


            <com.hampay.mobile.android.component.edittext.FacedEditText
                android:id="@+id/memorable_value"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/remember_edittext_bg"
                android:singleLine="true"/>



            <RelativeLayout
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true">


                <com.hampay.mobile.android.component.material.ButtonRectangle
                    android:id="@+id/keepOn_button"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerHorizontal="true"
                    android:background="@color/register_btn_color"
                    android:textSize="15dp" />

                <com.hampay.mobile.android.component.FacedTextView
                    android:id="@+id/keepOn_text"
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textColor="@android:color/white"
                    android:text="@string/get_current_memorable"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
