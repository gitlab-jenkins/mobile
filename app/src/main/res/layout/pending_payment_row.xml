<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true">

            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                android:id="@+id/callerPhoneNo"
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="test"
                android:layout_marginRight="4dp"/>

            <ImageView
                android:id="@+id/user_image"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/user_icon_blue_s"/>

        </LinearLayout>

        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            android:id="@+id/delete"
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/normal_text"
            android:textSize="13dp"
            android:gravity="right"
            android:text="@string/delete_pending_request"
            android:layout_centerVertical="true"
            android:visibility="visible"/>


    </RelativeLayout>



    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            android:id="@+id/date_time"
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/normal_text"
            android:textSize="13dp"
            android:gravity="right"
            android:text="۱۲/۳/۹۴  ۲۲:۴۳"
            android:layout_alignParentRight="true"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                android:id="@+id/price_pay"
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="13dp"
                android:gravity="center"
                android:layout_marginRight="8dp"
                android:text="۱۵۰.۰۰۰.۰۰۰"/>



            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                android:id="@+id/expire_pay"
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="13dp"
                android:gravity="left"
                android:layout_marginRight="8dp"
                android:text="۱۵۰.۰۰۰.۰۰۰"
                android:layout_gravity="left"/>



        </LinearLayout>



    </RelativeLayout>



        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            android:id="@+id/message"
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/normal_text"
            android:textSize="13dp"
            android:gravity="center"
            android:layout_marginRight="8dp"
            android:text="@string/message"/>

</LinearLayout>