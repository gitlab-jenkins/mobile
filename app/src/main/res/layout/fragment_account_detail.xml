<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_margin="8dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="right">

                    <com.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/user_name_text"
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:layout_marginRight="4dp"
                        android:text=""/>

                    <com.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/user_account_no_text"
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/normal_text"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:layout_marginRight="4dp"
                        android:text=""/>


                    <com.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/user_bank_name"
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/normal_text"
                        android:textSize="14dp"
                        android:gravity="center"
                        android:layout_marginRight="4dp"
                        android:text=""/>

                    <com.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/user_mobile_no"
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/normal_text"
                        android:textSize="14dp"
                        android:gravity="center"
                        android:layout_marginRight="4dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginRight="4dp">


                        <com.hampay.mobile.android.component.FacedTextView
                            android:id="@+id/user_account_type"
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="14dp"
                            android:gravity="center" />


                        <com.hampay.mobile.android.component.FacedTextView
                            android:id="@+id/user_account_title"
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/normal_text"
                            android:textSize="14dp"
                            android:gravity="center"
                            android:text="@string/account_type"/>


                    </LinearLayout>


                </LinearLayout>

                <ImageView
                    android:id="@+id/user_image"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/user_icon_blak"
                    android:layout_margin="2dp"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/verification_status_ll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <com.hampay.mobile.android.component.FacedTextView
                    android:id="@+id/user_status_text"
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="13dp"
                    android:gravity="right"
                    android:layout_marginRight="80dp"
                    android:layout_marginLeft="4dp"
                    android:text="@string/user_status_text"/>


                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center_horizontal">


                    <com.hampay.mobile.android.component.material.ButtonRectangle
                        android:id="@+id/verify_account_button"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerHorizontal="true"
                        android:background="@color/user_change_status"
                        android:textSize="16dp" />

                    <com.hampay.mobile.android.component.FacedTextView
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:textColor="@android:color/white"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="@string/user_status_verification"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"/>

                </RelativeLayout>


            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/normal_text"
                android:layout_marginTop="15dp"/>


            <com.hampay.mobile.android.component.FacedTextView
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/some_people_at_hampay"/>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="8dp">

                <LinearLayout
                    android:id="@+id/hampay_2_ll"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/hampay_image_2"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/user_icon_blak" />

                    <com.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/hampay_2"
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/normal_text"
                        android:textSize="14dp"
                        android:gravity="center"
                        android:layout_marginLeft="4dp"
                        android:layout_gravity="center_horizontal"
                        android:text="سعید کارخانه"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hampay_1_ll"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:visibility="gone">

                    <com.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/hampay_1"
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/normal_text"
                        android:textSize="14dp"
                        android:gravity="center"
                        android:layout_marginTop="12dp"
                        android:layout_gravity="center_horizontal"
                        android:text=""
                        android:layout_marginRight="4dp"/>

                    <ImageView
                        android:id="@+id/hampay_image_1"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/user_icon_blue" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="8dp">

                <LinearLayout
                    android:id="@+id/hampay_4_ll"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/hampay_image_4"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/user_icon_blue" />

                    <com.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/hampay_4"
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/normal_text"
                        android:textSize="14dp"
                        android:gravity="center"
                        android:layout_marginLeft="4dp"
                        android:layout_gravity="center_horizontal"
                        android:text="هم‌پی‌یار تجارت"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hampay_3_ll"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:visibility="gone">


                    <com.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/hampay_3"
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/normal_text"
                        android:textSize="14dp"
                        android:gravity="center"
                        android:layout_marginTop="12dp"
                        android:layout_gravity="center_horizontal"
                        android:text="مجید زمانی"
                        android:layout_marginRight="4dp"/>

                    <ImageView
                        android:id="@+id/hampay_image_3"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/user_icon_blue" />


                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/normal_text"
                android:layout_marginTop="5dp"/>

            <com.hampay.mobile.android.component.FacedTextView
                android:id="@+id/user_last_login"
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/normal_text"
                android:textSize="14dp"
                android:layout_margin="8dp"
                android:gravity="right"
                android:layout_gravity="right"
                android:text="آخرین ورودبه سیستم، "/>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>