<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:gravity="right"
        android:layout_margin="8dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right">

            <com.hampay.mobile.android.component.FacedTextView
                android:id="@+id/user_name_text"
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:gravity="center"
                android:layout_marginRight="8dp"
                android:text=""/>

            <com.hampay.mobile.android.component.FacedTextView
                android:id="@+id/user_account_no_text"
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:textSize="22sp"
                android:gravity="center"
                android:layout_marginRight="8dp"
                android:text=""/>


            <com.hampay.mobile.android.component.FacedTextView
                android:id="@+id/user_bank_name"
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:textSize="22sp"
                android:gravity="center"
                android:layout_marginRight="8dp"
                android:text=""/>

            <com.hampay.mobile.android.component.FacedTextView
                android:id="@+id/user_mobile_no"
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:textSize="22sp"
                android:gravity="center"
                android:layout_marginRight="8dp" />

            <com.hampay.mobile.android.component.FacedTextView
                android:id="@+id/user_account_type"
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:textSize="22sp"
                android:gravity="center"
                android:layout_marginRight="8dp" />

        </LinearLayout>

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/user_icon_blak"
            android:layout_margin="8dp"/>


    </LinearLayout>
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="25dp"/>


    <com.hampay.mobile.android.component.FacedTextView
        geekui:customTypeface="fonts/iran_sans.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="26sp"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/some_people_at_hampay"/>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/user_icon_blak" />

            <com.hampay.mobile.android.component.FacedTextView
                android:id="@+id/hampay_2"
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center_horizontal"
                android:text="سعید کارخانه"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="right">


            <com.hampay.mobile.android.component.FacedTextView
                android:id="@+id/hampay_1"
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_horizontal"
                android:text=""
                android:layout_marginRight="4dp"/>

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/user_icon_blue" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/user_icon_blue" />

            <com.hampay.mobile.android.component.FacedTextView
                android:id="@+id/hampay_4"
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center_horizontal"
                android:text="هم‌پی‌یار تجارت"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="right">


            <com.hampay.mobile.android.component.FacedTextView
                android:id="@+id/hampay_3"
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_horizontal"
                android:text="مجید زمانی"
                android:layout_marginRight="4dp"/>

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/user_icon_blue" />


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="25dp"/>

    <com.hampay.mobile.android.component.FacedTextView
        android:id="@+id/user_last_login"
        geekui:customTypeface="fonts/iran_sans.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/darker_gray"
        android:textSize="22sp"
        android:layout_margin="8dp"
        android:gravity="right"
        android:layout_gravity="right"
        android:text="آخرین ورودبه سیستم، "/>


</LinearLayout>