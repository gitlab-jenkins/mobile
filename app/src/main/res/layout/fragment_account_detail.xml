<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_margin="4dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="right">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginRight="4dp">

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            android:id="@+id/user_name_text"
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="15dp"
                            android:gravity="center"
                            android:layout_marginRight="4dp"
                            android:text=""/>

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/normal_text"
                            android:textSize="15dp"
                            android:gravity="right"
                            android:text="@string/user_account_name"/>

                    </LinearLayout>

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/user_account_no"
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/normal_text"
                        android:textSize="15dp"
                        android:gravity="right"
                        android:layout_marginRight="4dp"
                        android:text="@string/account_no"/>

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/user_account_no_text"
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="15dp"
                        android:gravity="left"
                        android:layout_gravity="left"
                        android:layout_marginLeft="4dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginRight="4dp">

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            android:id="@+id/user_bank_name"
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="14dp"
                            android:gravity="center"
                            android:text=" خاورمیانه "
                            android:layout_marginRight="2dp"/>

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/normal_text"
                            android:textSize="15dp"
                            android:gravity="right"
                            android:text="@string/bank"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginRight="4dp">

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            android:id="@+id/user_mobile_no"
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="14dp"
                            android:gravity="center"
                            android:layout_marginRight="2dp" />

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/normal_text"
                            android:textSize="15dp"
                            android:gravity="right"
                            android:text="@string/cell_number"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginRight="4dp">

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            android:id="@+id/user_national_code"
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="14dp"
                            android:gravity="center"
                            android:layout_marginRight="2dp" />

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/normal_text"
                            android:textSize="15dp"
                            android:gravity="right"
                            android:text="@string/national_code"/>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/iban_ll"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="right"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginRight="4dp"
                            android:layout_marginLeft="4dp">

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                geekui:customTypeface="fonts/iran_sans.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/normal_text"
                                android:textSize="15dp"
                                android:gravity="right"
                                android:layout_gravity="right"
                                android:text="@string/sheba_number_text"/>

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                android:id="@+id/user_iban_value"
                                geekui:customTypeface="fonts/iran_sans.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/black"
                                android:textSize="14dp"
                                android:gravity="center"
                                android:layout_marginRight="2dp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginRight="4dp">

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                android:id="@+id/user_iban_bank"
                                geekui:customTypeface="fonts/iran_sans.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/black"
                                android:textSize="14dp"
                                android:gravity="center"
                                android:layout_marginRight="2dp" />

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                geekui:customTypeface="fonts/iran_sans.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/normal_text"
                                android:textSize="15dp"
                                android:gravity="right"
                                android:text="@string/bank"/>


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="4dp"
                        android:visibility="gone">


                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            android:id="@+id/user_account_title"
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/normal_text"
                            android:textSize="14dp"
                            android:gravity="right"
                            android:layout_gravity="right"
                            android:text="@string/account_type"/>


                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            android:id="@+id/user_account_type"
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="14dp"
                            android:gravity="right"
                            android:layout_gravity="right"/>


                    </LinearLayout>


                </LinearLayout>

                <!--<xyz.homapay.hampay.mobile.android.component.circleimageview.CircleImageView-->
                    <!--android:id="@+id/image_profile"-->
                    <!--android:layout_width="60dp"-->
                    <!--android:layout_height="60dp"-->
                    <!--android:layout_gravity="center_horizontal"-->
                    <!--android:clickable="true"-->
                    <!--android:src="@drawable/user_icon_blak"-->
                    <!--app:civ_border="true"-->
                    <!--app:civ_borderColor="#FFFFFFFF"-->
                    <!--app:civ_borderWidth="1dp"-->
                    <!--app:civ_selector="true"-->
                    <!--app:civ_selectorColor="#4403a9f4"-->
                    <!--app:civ_selectorStrokeColor="#aa5677fc"-->
                    <!--app:civ_selectorStrokeWidth="1dp"-->
                    <!--android:visibility="gone"/>-->

                <!--<ImageView-->
                <!--android:id="@+id/user_image"-->
                <!--android:layout_width="54dp"-->
                <!--android:layout_height="54dp"-->
                <!--android:src="@drawable/user_icon_blak"-->
                <!--android:layout_margin="2dp"/>-->


            </LinearLayout>

            <RelativeLayout
                android:layout_width="180dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal">


                <xyz.homapay.hampay.mobile.android.component.material.ButtonRectangle
                    android:id="@+id/intro_account_button"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerHorizontal="true"
                    android:background="@color/user_change_status"
                    android:textSize="16dp"
                    android:contentDescription="verify"/>

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textColor="@android:color/white"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/intro_account" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/selectedHampay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/entry_field_color"
                android:layout_margin="10dp"/>

            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:text="@string/some_people_at_hampay"/>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/entry_field_color"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

    </ScrollView>

    <View
        android:id="@+id/hide_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:visibility="gone">

    </View>


</RelativeLayout>