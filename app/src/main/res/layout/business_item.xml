<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="right">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_margin="4dp">

        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            android:id="@+id/business_name"
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_menu_title"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_marginRight="8dp"
            android:text="نام کسب و کار"/>


        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            android:id="@+id/business_hampay_id"
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_menu_title"
            android:textSize="13dp"
            android:gravity="center"
            android:layout_marginRight="8dp"
            android:text="شناسه: "/>


    </LinearLayout>


    <ImageView
        android:id="@+id/business_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="4dp"
        android:src="@drawable/transaction_placeholder"
        android:background="@color/page_title"/>


</LinearLayout>