<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right|center_vertical"
    android:background="@drawable/dialog_success_style"
    android:orientation="horizontal"
    android:layout_margin="8dp"
    android:padding="6dp">

    <xyz.homapay.hampay.mobile.android.component.FacedTextView
        android:id="@+id/waiting_text"
        geekui:customTypeface="fonts/iran_sans.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/modal_text"
        android:textSize="14sp"
        android:text="@string/dialog_start_communication"
        android:layout_marginRight="2dp"/>

    <xyz.homapay.hampay.mobile.android.component.FacedTextView
        android:id="@+id/userName"
        geekui:customTypeface="fonts/iran_sans.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/modal_text"
        android:textSize="14sp"
        android:layout_marginRight="2dp" />

    <xyz.homapay.hampay.mobile.android.component.preloader.Preloader
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/preloader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:indicator="LineScale" />

</LinearLayout>