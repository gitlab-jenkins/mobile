<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/back"
            android:onClick="backActionBar"
            android:padding="12dp"/>

        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            geekui:customTypeface="fonts/vazir_regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_origin"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:text="@string/payment_request_title"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_origin" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="right"
                            android:layout_marginRight="2dp">

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                android:id="@+id/contact_name"
                                geekui:customTypeface="fonts/vazir_regular.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/main_menu_title"
                                android:textSize="15sp" />

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                android:id="@+id/cell_number"
                                geekui:customTypeface="fonts/vazir_regular.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/main_menu_title"
                                android:textSize="15dp" />

                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp">

                            <ImageView
                                android:id="@+id/user_image"
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:src="@drawable/user_placeholder"
                                android:scaleType="fitXY"
                                android:background="@color/page_title"
                                android:layout_gravity="center"/>

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/curve_images"/>

                        </FrameLayout>

                    </LinearLayout>

                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/account_details_text"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            geekui:customTypeface="fonts/vazir_regular.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main_menu_title"
                            android:textSize="14sp"
                            android:text="@string/currency_rials"
                            android:layout_marginLeft="8dp"/>

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            android:id="@+id/amount_value"
                            geekui:customTypeface="fonts/vazir_regular_bold.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main_menu_title"
                            android:textSize="14sp"
                            android:layout_marginLeft="2dp"/>

                    </LinearLayout>


                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        geekui:customTypeface="fonts/vazir_regular.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_menu_title"
                        android:textSize="14sp"
                        android:text="@string/request_payment_rial"
                        android:layout_marginRight="4dp"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/account_details_text"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            geekui:customTypeface="fonts/vazir_regular.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main_menu_title"
                            android:textSize="14sp"
                            android:text="@string/request_payment_vat"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="4dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            geekui:customTypeface="fonts/vazir_regular.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main_menu_title"
                            android:textSize="14sp"
                            android:text="@string/currency_rials"
                            android:layout_marginLeft="8dp"/>

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            android:id="@+id/vat_value"
                            geekui:customTypeface="fonts/vazir_regular_bold.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main_menu_title"
                            android:textSize="14sp"
                            android:layout_marginLeft="2dp"/>

                    </LinearLayout>

                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/account_details_text"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:visibility="gone"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:visibility="gone">

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        geekui:customTypeface="fonts/vazir_regular.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_menu_title"
                        android:textSize="14sp"
                        android:text="@string/request_payment_hampay_fee"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="4dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            geekui:customTypeface="fonts/vazir_regular.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main_menu_title"
                            android:textSize="14sp"
                            android:text="@string/currency_rials"
                            android:layout_marginLeft="8dp"/>

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            android:id="@+id/fee_value"
                            geekui:customTypeface="fonts/vazir_regular_bold.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main_menu_title"
                            android:textSize="14sp"
                            android:layout_marginLeft="2dp"/>

                    </LinearLayout>

                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/account_details_text"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/total_amount_bg">

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        geekui:customTypeface="fonts/vazir_regular_bold.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/page_title"
                        android:textSize="22sp"
                        android:text="@string/request_payment_total"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="2dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp">

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            geekui:customTypeface="fonts/vazir_regular.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/page_title"
                            android:textSize="14sp"
                            android:text="@string/currency_rials"
                            android:layout_marginLeft="8dp"/>

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            android:id="@+id/amount_total"
                            geekui:customTypeface="fonts/vazir_regular_bold.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/page_title"
                            android:textSize="22sp"
                            android:layout_marginLeft="2dp"/>

                    </LinearLayout>




                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/account_details_text"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"/>


                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/contact_message"
                        geekui:customTypeface="fonts/vazir_regular.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:textColor="@color/main_menu_title"
                        android:textSize="14sp"
                        android:layout_alignParentRight="true"
                        android:layout_margin="8dp" />


                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    android:id="@+id/payment_request_button"
                    geekui:customTypeface="fonts/vazir_regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/payment_request_button_send"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@drawable/registration_button_style"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp"/>


            </LinearLayout>


        </ScrollView>


    </RelativeLayout>


</LinearLayout>
