<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:background="@drawable/dialog_pay_theme"
    android:orientation="vertical"
    android:padding="15dp">

    <com.hampay.mobile.android.component.FacedTextView
        android:id="@+id/pay_one_confirm"
        geekui:customTypeface="fonts/iran_sans.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/normal_text"
        android:textSize="20sp"
        android:text="@string/pay_one_confirm"/>

    <com.hampay.mobile.android.component.FacedTextView
        geekui:customTypeface="fonts/iran_sans.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/normal_text"
        android:textSize="20sp"
        android:text="@string/pay_one_comment"
        android:layout_marginTop="15dp"/>


    <com.hampay.mobile.android.component.FacedTextView
        geekui:customTypeface="fonts/iran_sans.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/normal_text"
        android:textSize="20sp"
        android:text="@string/pay_one_question"
        android:layout_marginTop="15dp"/>
    
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <com.hampay.mobile.android.component.FacedTextView
            android:id="@+id/dis_confirmation"
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pay_disconfirm"
            android:textSize="24sp"
            android:text="@string/pay_disconfirm" />

        <com.hampay.mobile.android.component.FacedTextView
            android:id="@+id/confirmation"
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pay_confirm"
            android:textSize="24sp"
            android:text="@string/pay_confirm"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</LinearLayout>