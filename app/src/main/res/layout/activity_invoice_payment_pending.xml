<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/nav_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/back_actionbar"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:padding="12dp"
            android:clickable="true"
            android:onClick="backActionBar"/>

        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:text="@string/invoice_payment_confirm"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="64dp"/>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_margin="12dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="right|center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            android:id="@+id/contact_name_1"
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:layout_marginRight="8dp" />

                    </LinearLayout>

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/received_message"
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:layout_marginRight="8dp"
                        android:text="پیام"/>


                </LinearLayout>


                <xyz.homapay.hampay.mobile.android.component.circleimageview.CircleImageView
                    android:id="@+id/user_image"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:clickable="true"
                    android:src="@drawable/user_icon_blue"
                    app:civ_border="true"
                    app:civ_borderColor="#FFFFFFFF"
                    app:civ_borderWidth="1dp"
                    app:civ_selector="true"
                    app:civ_selectorColor="#4403a9f4"
                    app:civ_selectorStrokeColor="#aa5677fc"
                    app:civ_selectorStrokeWidth="1dp" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/entry_field_color"
                android:layout_margin="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_margin="18dp">

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    android:id="@+id/contact_name_2"
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginRight="8dp" />

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/normal_text"
                    android:textSize="15dp"
                    android:text="@string/payment_request_to"
                    android:gravity="right"
                    android:layout_gravity="right"
                    />

            </LinearLayout>


            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:text="@string/payment_message"
                android:layout_marginRight="20dp"/>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="96dp"
                android:background="@drawable/entry_field_bg"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp">


                <xyz.homapay.hampay.mobile.android.component.edittext.FacedEditText
                    android:id="@+id/contact_message"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@android:color/transparent"
                    android:textSize="13dp"
                    android:padding="6dp"
                    android:textColor="@color/normal_text"
                    android:hint="@string/insert_message"
                    android:gravity="top"
                    android:contentDescription="message"/>


            </RelativeLayout>




            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_margin="20dp">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/entry_field_bg"
                    android:gravity="center_vertical"
                    android:padding="4dp">

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="15dp"
                        android:text="@string/price"
                        android:layout_alignParentRight="true"/>

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/payment_value"
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:gravity="center" />


                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/creditInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_margin="12dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true">

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/cardNumberValue"
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="220dp"
                        android:layout_height="48dp"
                        android:textColor="#e98a30"
                        android:textSize="16dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/purchase_input_text"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"/>

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/normal_text"
                        android:textSize="15dp"
                        android:text="@string/card_number"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true">

                    <xyz.homapay.hampay.mobile.android.component.edittext.FacedEditText
                        android:id="@+id/pin2Value"
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="220dp"
                        android:layout_height="48dp"
                        android:textColor="#e98a30"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@drawable/purchase_input_text"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:inputType="numberPassword" />

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/normal_text"
                        android:textSize="15dp"
                        android:text="@string/user_pin2"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"/>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_margin="20dp">


                <xyz.homapay.hampay.mobile.android.component.material.ButtonRectangle
                    android:id="@+id/pay_to_one_button"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerHorizontal="true"
                    android:background="@color/register_btn_color"
                    android:textSize="15dp"
                    android:contentDescription="pay"/>

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textColor="@android:color/white"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/payment"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp" />

            </RelativeLayout>


        </LinearLayout>


    </ScrollView>


    </RelativeLayout>


</LinearLayout>
