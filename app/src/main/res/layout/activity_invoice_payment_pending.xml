<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/back"
            android:onClick="backActionBar"
            android:padding="8dp"/>

        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_origin"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:text="@string/invoice_payment_confirm"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_origin" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_gravity="right"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="right"
                        android:layout_marginRight="2dp">

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            android:id="@+id/callerName"
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main_menu_title"
                            android:textSize="15sp"
                            android:text="نام کسب و کار"/>

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            android:id="@+id/create_date"
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main_menu_title"
                            android:textSize="13dp"
                            android:gravity="right"
                            android:layout_gravity="right"
                            android:layout_alignParentRight="true"/>

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            android:id="@+id/paymentCode"
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/app_origin"
                            android:textSize="13dp"
                            android:text="کد فاکتور"/>

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp">

                        <ImageView
                            android:id="@+id/user_image"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/transaction_placeholder"
                            android:scaleType="fitXY"
                            android:background="@color/page_title"
                            android:layout_gravity="center"/>

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/curve_images"/>

                    </FrameLayout>

                </LinearLayout>


                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    android:id="@+id/received_message"
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_menu_title"
                    android:textSize="14sp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/account_details_text"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp">

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/account_details_text"
                            android:textSize="15sp"
                            android:text="@string/request_payment_rial"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="2dp">

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                geekui:customTypeface="fonts/iran_sans.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/account_details_text"
                                android:textSize="14sp"
                                android:text="@string/currency_rials"/>

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                android:id="@+id/paymentPriceValue"
                                geekui:customTypeface="fonts/iran_sans_bold.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/account_details_text"
                                android:textSize="20sp"
                                android:layout_marginLeft="2dp"/>

                        </LinearLayout>




                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/account_details_text"
                        android:layout_margin="8dp"/>



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp">

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/account_details_text"
                            android:textSize="15sp"
                            android:text="@string/request_payment_vat"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="2dp">

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                geekui:customTypeface="fonts/iran_sans.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/account_details_text"
                                android:textSize="14sp"
                                android:text="@string/currency_rials"/>

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                android:id="@+id/paymentVAT"
                                geekui:customTypeface="fonts/iran_sans_bold.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/account_details_text"
                                android:textSize="15sp"
                                android:layout_marginLeft="2dp"/>

                        </LinearLayout>




                    </RelativeLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/account_details_text"
                        android:layout_margin="8dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp">

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/account_details_text"
                            android:textSize="15sp"
                            android:text="@string/request_payment_fee"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="2dp">

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                geekui:customTypeface="fonts/iran_sans.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/account_details_text"
                                android:textSize="14sp"
                                android:text="@string/currency_rials"/>

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                android:id="@+id/paymentFeeValue"
                                geekui:customTypeface="fonts/iran_sans_bold.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/account_details_text"
                                android:textSize="15sp"
                                android:layout_marginLeft="2dp"/>

                        </LinearLayout>




                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/account_details_text"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp"/>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@color/total_amount_bg">

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            geekui:customTypeface="fonts/iran_sans_bold.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/page_title"
                            android:textSize="22sp"
                            android:text="@string/request_payment_total"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="2dp">

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                geekui:customTypeface="fonts/iran_sans.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/page_title"
                                android:textSize="14sp"
                                android:text="@string/currency_rials"/>

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                android:id="@+id/paymentTotalValue"
                                geekui:customTypeface="fonts/iran_sans_bold.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/page_title"
                                android:textSize="22sp"
                                android:layout_marginLeft="2dp"/>

                        </LinearLayout>




                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/account_details_text"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/creditInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp">

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/account_details_text"
                            android:textSize="18sp"
                            android:text="@string/card_number"
                            android:layout_gravity="right"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <include layout="@layout/masked_card_number"/>

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                android:id="@+id/cardNumberValue"
                                geekui:customTypeface="fonts/iran_sans.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/account_details_text"
                                android:textSize="18dp"
                                android:text="@string/card_number"
                                android:layout_marginRight="8dp"/>

                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="right"
                        android:layout_margin="8dp">

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            android:id="@+id/bankName"
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/account_details_text"
                            android:textSize="20sp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="2dp"/>


                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true">

                        <xyz.homapay.hampay.mobile.android.component.edittext.FacedEditText
                            android:id="@+id/pin2Value"
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:textColor="@color/account_details_text"
                            android:textSize="16dp"
                            android:gravity="left|center_vertical"
                            android:padding="4dp"
                            android:layout_gravity="left"
                            android:background="@drawable/purchase_input_text"
                            android:inputType="numberPassword"
                            android:layout_marginRight="120dp"/>

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/account_details_text"
                            android:textSize="18sp"
                            android:text="@string/user_pin2"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/pay_button"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/hampay_payment_button"/>


            </LinearLayout>


        </ScrollView>


    </RelativeLayout>


</LinearLayout>
