<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/app_origin"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:onClick="backActionBar"
                android:padding="12dp"
                android:src="@drawable/back"
                android:tint="@color/white" />

            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="8dp"
                android:text="@string/bills_mobile"
                android:textColor="@color/white"
                android:textSize="18sp"
                geekui:customTypeface="fonts/vazir_regular.ttf" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/app_origin" />

        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"
            android:text="@string/bills_mobile_text"
            android:textColor="@color/main_menu_title"
            android:textSize="16sp"
            geekui:customTypeface="fonts/vazir_regular.ttf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:src="@drawable/bills_contacts" />

            <ImageView
                android:id="@+id/simNumber"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:src="@drawable/bills_sim" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_margin="2dp"
                android:background="@drawable/entry_field_bg">

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    android:id="@+id/cellNumberText"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="4dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="@string/mobile_no_entry"
                    android:maxLength="9"
                    android:onClick="onClick"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    geekui:customTypeface="fonts/vazir_regular.ttf" />

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:text="@string/iran_prefix_cell_number"
                    android:textColor="@color/start_page_text"
                    android:textSize="15dp"
                    geekui:customTypeface="fonts/vazir_regular.ttf" />

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/entry_field_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/tac_privacy_checkbox"
                    android:checked="true" />

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="8dp"
                    android:gravity="left"
                    android:text="۵۶۰۰۰۰۰ ریال"
                    android:textColor="@color/main_menu_title"
                    android:textSize="16sp"
                    geekui:customTypeface="fonts/vazir_regular.ttf" />

            </LinearLayout>

            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:text="@string/bills_end_term"
                android:textColor="@color/main_menu_title"
                android:textSize="16sp"
                geekui:customTypeface="fonts/vazir_regular.ttf" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/entry_field_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/tac_privacy_checkbox" />

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="8dp"
                    android:gravity="left"
                    android:text="۵۶۰۰۰۰۰ ریال"
                    android:textColor="@color/main_menu_title"
                    android:textSize="16sp"
                    geekui:customTypeface="fonts/vazir_regular.ttf" />

            </LinearLayout>

            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:text="@string/bills_mid_term"
                android:textColor="@color/main_menu_title"
                android:textSize="16sp"
                geekui:customTypeface="fonts/vazir_regular.ttf" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/entry_field_color" />

        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            android:id="@+id/bills_mobile_button"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/registration_button_style"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/payment_request_button_confirm"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            geekui:customTypeface="fonts/vazir_regular.ttf" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/barCodeScanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:background="@drawable/registration_button_style"
        android:gravity="center"
        android:onClick="onClick"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="32dp"
            android:tint="@color/white"
            android:src="@drawable/ic_barcode" />

        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="@string/scan_barcode"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            geekui:customTypeface="fonts/vazir_regular.ttf" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/keyboard"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <include
            layout="@layout/numeric_keyboard"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>
