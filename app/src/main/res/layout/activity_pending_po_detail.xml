<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="backActionBar"
            android:padding="12dp"
            android:src="@drawable/back" />

        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="8dp"
            android:text="@string/pending_po_details"
            android:textColor="@color/app_origin"
            android:textSize="18sp"
            geekui:customTypeface="fonts/vazir_regular.ttf" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_origin" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:gravity="right"
                        android:orientation="vertical">

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            android:id="@+id/caller_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main_menu_title"
                            android:textSize="15sp"
                            geekui:customTypeface="fonts/vazir_regular.ttf" />

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            android:id="@+id/caller_phone_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main_menu_title"
                            android:textSize="15dp"
                            geekui:customTypeface="fonts/vazir_regular.ttf" />

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp">

                        <ImageView
                            android:id="@+id/user_image"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_gravity="center"
                            android:background="@color/page_title"
                            android:scaleType="fitXY"
                            android:src="@drawable/user_placeholder" />

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/curve_images" />

                    </FrameLayout>

                </LinearLayout>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    android:id="@+id/amount_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/account_details_text"
                    android:textSize="22sp"
                    geekui:customTypeface="fonts/vazir_regular_bold.ttf" />

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/currency_rials"
                    android:textColor="@color/account_details_text"
                    android:textSize="12sp"
                    geekui:customTypeface="fonts/vazir_regular.ttf" />

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_margin="8dp"
                android:background="@color/main_menu_title" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    android:id="@+id/payment_request_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:textColor="@color/page_title"
                    android:textSize="15dp"
                    geekui:customTypeface="fonts/vazir_regular.ttf" />

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/payment_request_code"
                    android:textColor="@color/main_menu_title"
                    android:textSize="15dp"
                    geekui:customTypeface="fonts/vazir_regular.ttf" />

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_margin="8dp"
                android:background="@color/main_menu_title" />


            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                android:id="@+id/create_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textColor="@color/main_menu_title"
                android:textSize="15dp"
                geekui:customTypeface="fonts/vazir_regular.ttf" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_margin="8dp"
                android:background="@color/main_menu_title" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    android:id="@+id/pending_po_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:text="در حال انتظار"
                    android:textColor="@color/main_menu_title"
                    android:textSize="15dp"
                    geekui:customTypeface="fonts/vazir_regular.ttf" />

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pending_po_status"
                    android:textColor="@color/main_menu_title"
                    android:textSize="15dp"
                    geekui:customTypeface="fonts/vazir_regular.ttf" />

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_margin="8dp"
                android:background="@color/main_menu_title" />


            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                android:id="@+id/message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="@string/message"
                android:textColor="@color/main_menu_title"
                android:textSize="14dp"
                geekui:customTypeface="fonts/vazir_regular.ttf" />

            <LinearLayout
                android:id="@+id/re_payment_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:padding="8dp">

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:gravity="center"
                    android:text="@string/payment_request_issue"
                    android:textColor="@color/page_title"
                    android:textSize="18dp"
                    geekui:customTypeface="fonts/vazir_regular.ttf" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@color/page_title"
                    android:src="@drawable/add_payment_request" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

