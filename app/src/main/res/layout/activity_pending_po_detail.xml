<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/back"
            android:onClick="backActionBar"
            android:padding="12dp"/>

        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_origin"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:text="@string/pending_po_details"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_origin" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_margin="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="right"
                    android:layout_marginRight="2dp">

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/caller_name"
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_menu_title"
                        android:textSize="15sp"
                        android:text="دریافت"/>

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/caller_phone_number"
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_menu_title"
                        android:textSize="15dp"
                        android:text="هومن امینی"/>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/transaction_placeholder"
                        android:scaleType="fitXY"
                        android:background="@color/page_title"
                        android:layout_gravity="center"/>

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/curve_images"/>

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp">

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    android:id="@+id/amount_value"
                    geekui:customTypeface="fonts/iran_sans_bold.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/account_details_text"
                    android:textSize="18sp"
                    android:text="۱۵۰.۰۰۰.۰۰۰"/>

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/account_details_text"
                    android:textSize="12sp"
                    android:text="@string/currency_rials"/>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/main_menu_title"
                android:layout_margin="12dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_gravity="right">

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    android:id="@+id/payment_request_code"
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/page_title"
                    android:textSize="15dp"
                    android:text="123456"
                    android:layout_marginRight="4dp"/>

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_menu_title"
                    android:textSize="15dp"
                    android:text="@string/payment_request_code"/>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/main_menu_title"
                android:layout_margin="12dp"/>


            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                android:id="@+id/create_date"
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_menu_title"
                android:textSize="15dp"
                android:text="1395"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:layout_gravity="right"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/main_menu_title"
                android:layout_margin="12dp"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_gravity="right">

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    android:id="@+id/pending_po_status"
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_menu_title"
                    android:textSize="15dp"
                    android:text="در حال انتظار"
                    android:layout_marginRight="4dp"/>

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_menu_title"
                    android:textSize="15dp"
                    android:text="@string/pending_po_status"/>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/main_menu_title"
                android:layout_margin="12dp"/>


            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                android:id="@+id/message_text"
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_menu_title"
                android:textSize="14dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_gravity="right"
                android:text="@string/message"/>

            <LinearLayout
                android:id="@+id/re_payment_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:padding="8dp">

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/page_title"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:layout_marginRight="4dp"
                    android:text="@string/payment"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/add_payment_request"
                    android:background="@color/page_title"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

