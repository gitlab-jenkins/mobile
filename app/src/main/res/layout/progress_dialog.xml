<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/progressDialog_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:orientation="vertical"
        android:background="@color/me_action_bar_bg"
        >

    <com.hampay.mobile.android.component.PersianTextView
            android:id="@+id/progressDialog_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:gravity="right|center_vertical"
            android:text="@string/progress_dialog_message"
            android:textColor="#eee"
            android:textSize="18sp"
            android:background="@color/me_action_bar_bg"
            />

    <ProgressBar
            android:id="@+id/progressDialog_progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:background="@color/me_action_bar_bg"
            >
    </ProgressBar>
</LinearLayout>