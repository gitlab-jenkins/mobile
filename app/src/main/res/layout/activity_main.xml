<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="@color/colorPrimary">

            <xyz.homapay.hampay.mobile.android.component.material.RippleView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                geekui:rv_centered="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/nav_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/line"
                    android:padding="13dp"
                    android:contentDescription="menu"/>

            </xyz.homapay.hampay.mobile.android.component.material.RippleView>

            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                android:id="@+id/fragment_title"
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:text="@string/title_account_detail"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="64dp"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <xyz.homapay.hampay.mobile.android.component.material.RippleView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    geekui:rv_centered="true"
                    android:layout_marginLeft="15dp">

                <ImageView
                    android:id="@+id/first_shortcut"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/pay_ic_wit"
                    android:layout_centerInParent="true"
                    android:contentDescription="submenu1"/>

                </xyz.homapay.hampay.mobile.android.component.material.RippleView>

                <xyz.homapay.hampay.mobile.android.component.material.RippleView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    geekui:rv_centered="true"
                    android:layout_marginLeft="5dp">

                    <ImageView
                        android:id="@+id/second_shortcut"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/businnes_ic_wit"
                        android:layout_centerInParent="true"
                        android:contentDescription="submenu2"/>

                </xyz.homapay.hampay.mobile.android.component.material.RippleView>

            </LinearLayout>

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/container_body"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />


    </LinearLayout>


    <fragment
        android:id="@+id/fragment_navigation_drawer"
        android:name="xyz.homapay.hampay.mobile.android.fragment.FragmentDrawer"
        android:layout_width="@dimen/nav_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        app:layout="@layout/fragment_navigation_drawer"
        tools:layout="@layout/fragment_navigation_drawer" />

</android.support.v4.widget.DrawerLayout>