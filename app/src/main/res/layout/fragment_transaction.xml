<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ListView
        android:id="@+id/transationListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/normal_text"
        android:dividerHeight="0.5dp"
        android:footerDividersEnabled="false" />



    <com.hampay.mobile.android.component.FacedTextView
        android:id="@+id/no_transaction"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:textSize="18dp"
        android:text="@string/no_transaction"/>


    <com.hampay.mobile.android.component.FacedTextView
        geekui:customTypeface="fonts/iran_sans.ttf"
        android:id="@+id/noItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:textColor="#363636"/>


    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/loading_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">


        <ProgressBar
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminateDrawable="@drawable/fragment_progress"
            android:layout_centerInParent="true"/>


    </RelativeLayout>

</RelativeLayout>