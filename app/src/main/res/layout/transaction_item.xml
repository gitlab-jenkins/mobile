<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <ImageView
            android:id="@+id/status_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="3dp"
            android:src="@drawable/arrow_r"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            android:gravity="right">


            <!--<LinearLayout-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:orientation="vertical"-->
                <!--android:gravity="right"-->
                <!--android:layout_marginTop="6dp"-->
                <!--android:paddingRight="8dp">-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    android:id="@+id/status_text"
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:layout_marginRight="4dp"
                    android:text="دریافت"/>

                <xyz.homapay.hampay.mobile.android.component.circleimageview.CircleImageView
                    android:id="@+id/image"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:clickable="true"
                    android:src="@drawable/user_icon_blue"
                    app:civ_border="true"
                    app:civ_borderColor="#FFFFFFFF"
                    app:civ_borderWidth="1dp"
                    app:civ_selector="true"
                    app:civ_selectorColor="#4403a9f4"
                    app:civ_selectorStrokeColor="#aa5677fc"
                    app:civ_selectorStrokeWidth="1dp" />

            </LinearLayout>

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    android:id="@+id/user_name"
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:text="هومن امینی"/>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/date_time"
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/normal_text"
                        android:textSize="13dp"
                        android:gravity="right"
                        android:text="۱۲/۳/۹۴  ۲۲:۴۳"
                        android:layout_alignParentRight="true"/>

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/price_pay"
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="13dp"
                        android:gravity="center"
                        android:layout_marginRight="8dp"
                        android:text="۱۵۰.۰۰۰.۰۰۰"/>

                </RelativeLayout>

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    android:id="@+id/reject_message"
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/normal_text"
                    android:textSize="13dp"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:text="متن پیام"
                    android:singleLine="true"
                    android:visibility="gone"/>

                <LinearLayout
                    android:id="@+id/user_fee_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/user_fee_value"
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="13dp"
                        android:gravity="center" />

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/user_fee_title"
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/normal_text"
                        android:textSize="13dp"
                        android:gravity="right"
                        android:text="@string/user_fee_title"/>

                </LinearLayout>

            <!--</LinearLayout>-->



        </LinearLayout>





    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp">



    </LinearLayout>


</LinearLayout>