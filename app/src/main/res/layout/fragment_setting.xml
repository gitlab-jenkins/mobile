<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            android:id="@+id/setting_item"
            geekui:customTypeface="fonts/vazir_regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/normal_text"
            android:textSize="15dp"
            android:text="@string/notification_setting"
            android:layout_margin="12dp"
            android:layout_alignParentRight="true"/>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/notificationSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff=""
            android:background="@android:color/transparent"
            android:textColor="@color/app_origin"
            android:textOn=""
            android:button="@null"
            android:checked="true"
            android:layout_centerVertical="true"
            android:layout_margin="12dp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray"/>

    <ListView
        android:id="@+id/settingListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="0.5dp"/>

</LinearLayout>