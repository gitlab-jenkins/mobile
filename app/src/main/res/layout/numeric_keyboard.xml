<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp">

        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            android:id="@+id/digit_1"
            android:layout_width="0dip"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="0.3"
            android:background="@drawable/keyboard_button_selector"
            android:clickable="true"
            android:gravity="center"
            android:onClick="pressKey"
            android:tag="1"
            android:text="۱"
            android:textColor="@color/keyboard_border_text"
            android:textSize="20sp"
            geekui:customTypeface="fonts/vazir_regular_bold.ttf" />


        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            android:id="@+id/digit_2"
            android:layout_width="0dip"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="0.3"
            android:background="@drawable/keyboard_button_selector"
            android:clickable="true"
            android:gravity="center"
            android:onClick="pressKey"
            android:tag="2"
            android:text="۲"
            android:textColor="@color/keyboard_border_text"
            android:textSize="20sp"
            geekui:customTypeface="fonts/vazir_regular_bold.ttf" />

        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            android:id="@+id/digit_3"
            android:layout_width="0dip"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="0.3"
            android:background="@drawable/keyboard_button_selector"
            android:clickable="true"
            android:gravity="center"
            android:onClick="pressKey"
            android:tag="3"
            android:text="۳"
            android:textColor="@color/keyboard_border_text"
            android:textSize="20sp"
            geekui:customTypeface="fonts/vazir_regular_bold.ttf" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp">


        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            android:id="@+id/digit_4"
            android:layout_width="0dip"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="0.3"
            android:background="@drawable/keyboard_button_selector"
            android:clickable="true"
            android:gravity="center"
            android:onClick="pressKey"
            android:tag="4"
            android:text="۴"
            android:textColor="@color/keyboard_border_text"
            android:textSize="20sp"
            geekui:customTypeface="fonts/vazir_regular_bold.ttf" />


        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            android:id="@+id/digit_5"
            android:layout_width="0dip"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="0.3"
            android:background="@drawable/keyboard_button_selector"
            android:clickable="true"
            android:gravity="center"
            android:onClick="pressKey"
            android:tag="5"
            android:text="۵"
            android:textColor="@color/keyboard_border_text"
            android:textSize="20sp"
            geekui:customTypeface="fonts/vazir_regular_bold.ttf" />

        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            android:id="@+id/digit_6"
            android:layout_width="0dip"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="0.3"
            android:background="@drawable/keyboard_button_selector"
            android:clickable="true"
            android:gravity="center"
            android:onClick="pressKey"
            android:tag="6"
            android:text="۶"
            android:textColor="@color/keyboard_border_text"
            android:textSize="20sp"
            geekui:customTypeface="fonts/vazir_regular_bold.ttf" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp">


        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            android:id="@+id/digit_7"
            android:layout_width="0dip"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="0.3"
            android:background="@drawable/keyboard_button_selector"
            android:clickable="true"
            android:gravity="center"
            android:onClick="pressKey"
            android:tag="7"
            android:text="۷"
            android:textColor="@color/keyboard_border_text"
            android:textSize="20sp"
            geekui:customTypeface="fonts/vazir_regular_bold.ttf" />


        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            android:id="@+id/digit_8"
            android:layout_width="0dip"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="0.3"
            android:background="@drawable/keyboard_button_selector"
            android:clickable="true"
            android:gravity="center"
            android:onClick="pressKey"
            android:tag="8"
            android:text="۸"
            android:textColor="@color/keyboard_border_text"
            android:textSize="20sp"
            geekui:customTypeface="fonts/vazir_regular_bold.ttf" />

        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            android:id="@+id/digit_9"
            android:layout_width="0dip"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="0.3"
            android:background="@drawable/keyboard_button_selector"
            android:clickable="true"
            android:gravity="center"
            android:onClick="pressKey"
            android:tag="9"
            android:text="۹"
            android:textColor="@color/keyboard_border_text"
            android:textSize="20sp"
            geekui:customTypeface="fonts/vazir_regular_bold.ttf" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp">


        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            android:id="@+id/keyboard_dismiss"
            android:layout_width="0dip"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="0.3"
            android:background="@drawable/keyboard_button_selector"
            android:clickable="true"
            android:gravity="center"
            android:onClick="pressKey"
            android:tag="*"
            android:text="@string/keyboard_dismiss"
            android:textColor="@color/app_origin"
            android:textSize="20sp"
            geekui:customTypeface="fonts/vazir_regular_bold.ttf" />


        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            android:id="@+id/digit_0"
            android:layout_width="0dip"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="0.3"
            android:background="@drawable/keyboard_button_selector"
            android:clickable="true"
            android:gravity="center"
            android:onClick="pressKey"
            android:tag="0"
            android:text="۰"
            android:textColor="@color/keyboard_border_text"
            android:textSize="20sp"
            geekui:customTypeface="fonts/vazir_regular_bold.ttf" />

        <RelativeLayout
            android:id="@+id/backspace"
            android:layout_width="0dip"
            android:layout_height="42dp"
            android:layout_margin="2dp"
            android:layout_weight="0.3"
            android:background="@drawable/keyboard_button_selector"
            android:clickable="true"
            android:longClickable="true"
            android:onClick="pressKey"
            android:tag="d">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerInParent="true"
                android:background="@color/app_origin"
                android:src="@drawable/backsplace" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>