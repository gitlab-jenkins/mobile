<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/back"
                android:onClick="backActionBar"
                android:padding="12dp"/>

            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                geekui:customTypeface="fonts/vazir_regular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_origin"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:text="@string/main_fragment_bills_top_up"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:layout_centerVertical="true"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">


            <RelativeLayout
                android:id="@+id/topUpTool"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@color/transaction_unselected_tab"
                android:layout_marginRight="0.5dp"
                android:layout_marginLeft="0.5dp">

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    geekui:customTypeface="fonts/vazir_regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/topup_purchase"
                    android:layout_centerInParent="true"/>

                <ImageView
                    android:id="@+id/topUpTriangle"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_triangle"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:visibility="gone"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/billsTool"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@color/page_title"
                android:layout_marginLeft="1dp">

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    geekui:customTypeface="fonts/vazir_regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/bills_payment"
                    android:layout_centerInParent="true"/>

                <ImageView
                    android:id="@+id/billsTriangle"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_triangle"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:visibility="visible"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/billsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/mobileBills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="right"
                android:visibility="gone">

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    geekui:customTypeface="fonts/vazir_regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_menu_title"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/bills_mobile"
                    android:layout_centerInParent="true"/>

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="26dp"
                    android:src="@drawable/bills_mobile"
                    android:background="@color/app_origin"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/entry_field_color"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/serviceBills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="right">

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    geekui:customTypeface="fonts/vazir_regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_menu_title"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/bills_service"
                    android:layout_centerInParent="true"/>

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="26dp"
                    android:src="@drawable/bills_service"
                    android:background="@color/app_origin"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/entry_field_color"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/topUpLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                geekui:customTypeface="fonts/vazir_regular.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/main_menu_title"
                android:textSize="15dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/topup_text"
                android:layout_centerInParent="true"
                android:layout_margin="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:src="@drawable/bills_contacts"
                    android:background="@color/app_origin"
                    android:layout_margin="2dp"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:src="@drawable/bills_contacts"
                    android:background="@color/app_origin"
                    android:layout_marginLeft="2dp" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/entry_field_bg"
                    android:layout_margin="2dp">

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        geekui:customTypeface="fonts/vazir_regular.ttf"
                        android:id="@+id/cellNumberText"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@android:color/transparent"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="2dp"
                        android:textSize="15dp"
                        android:hint="@string/mobile_no_entry"
                        android:maxLength="9"
                        android:textColor="@android:color/black"
                        android:gravity="center_vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:nextFocusDown="@+id/cardNumberValue"/>

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        geekui:customTypeface="fonts/vazir_regular.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/start_page_text"
                        android:textSize="15dp"
                        android:text="@string/iran_prefix_cell_number"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"/>

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/topup_placeholder"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:padding="8dp">

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    geekui:customTypeface="fonts/vazir_regular_bold.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/start_page_text"
                    android:textSize="15dp"
                    android:text="@string/currency_rials"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"/>

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    geekui:customTypeface="fonts/vazir_regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/app_origin"
                    android:textSize="15dp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/topup_amount"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/topup_placeholder"
                android:layout_margin="8dp"
                android:padding="8dp">

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    geekui:customTypeface="fonts/vazir_regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/start_page_text"
                    android:textSize="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"/>

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    geekui:customTypeface="fonts/vazir_regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/app_origin"
                    android:textSize="15dp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/topup_amount"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                android:id="@+id/bills_mobile_button"
                geekui:customTypeface="fonts/vazir_regular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/payment_request_button_confirm"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:background="@drawable/registration_button_style"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/keyboard"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <include
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/numeric_keyboard"/>
    </LinearLayout>

</RelativeLayout>
