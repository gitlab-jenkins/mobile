<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/help_blue"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"/>

            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/page_title"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                android:text="@string/remember_phrase"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/page_title"
            android:layout_marginTop="4dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="32dp"
            android:orientation="horizontal"
            android:layout_margin="8dp">


            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:background="@drawable/third_navigation_unfill">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/lock_info_green"
                    android:layout_centerInParent="true"
                    />



                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/box_forward_tt"
                    android:layout_centerVertical="true"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:background="@drawable/second_navigation_fill">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/mobile_info"
                    android:layout_centerInParent="true"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="32dp"
                    android:background="@android:color/white"
                    android:src="@drawable/box_forward_tg"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/box_forward_wt"
                    android:layout_centerVertical="true"
                    />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:background="@drawable/first_navigation_fill">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/personal_info"
                    android:layout_centerInParent="true"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="32dp"
                    android:background="@android:color/white"
                    android:src="@drawable/box_forward_tg"/>


            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:id="@+id/password_1_rl"
                        android:layout_width="fill_parent"
                        android:layout_height="84dp"
                        android:gravity="right|center_vertical"
                        android:background="@drawable/stroke_bg"
                        android:layout_margin="8dp">

                        <RelativeLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginRight="12dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true">


                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/icon_lock"
                                android:layout_centerInParent="true"
                                android:background="@color/page_title"/>

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                geekui:customTypeface="fonts/iran_sans.ttf"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:textColor="@android:color/white"
                                android:textSize="12sp"
                                android:text="Û³"
                                android:gravity="center"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/badge_text"/>

                        </RelativeLayout>

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            android:id="@+id/password_notify_text_1"
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/page_title"
                            android:textSize="14dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="@string/remember_phrase_text"
                            android:layout_centerVertical="true"
                            android:gravity="right"
                            android:layout_marginRight="64dp"/>


                    </RelativeLayout>


                    <LinearLayout
                        android:id="@+id/password_holder"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_margin="8dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/register_border"
                        android:contentDescription="activation_holder">

                        <RelativeLayout
                            android:layout_width="240dp"
                            android:layout_height="50dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp">

                            <View
                                android:layout_width="230dp"
                                android:layout_height="2dp"
                                android:background="@color/page_title"
                                android:layout_alignParentBottom="true"/>

                            <View
                                android:layout_width="2dp"
                                android:layout_height="16dp"
                                android:background="@color/page_title"
                                android:layout_alignParentBottom="true"/>

                            <View
                                android:layout_width="2dp"
                                android:layout_height="16dp"
                                android:background="@color/page_title"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_centerInParent="true">

                                <xyz.homapay.hampay.mobile.android.component.edittext.FacedEditText
                                    android:id="@+id/memorable_value"
                                    android:layout_width="160dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="15dp"
                                    android:gravity="center"
                                    android:textColor="@android:color/black"
                                    android:layout_gravity="center_horizontal"
                                    android:singleLine="true"
                                    android:maxLength="15"
                                    android:contentDescription="memorable"
                                    android:background="@color/transparency" />


                            </LinearLayout>


                        </RelativeLayout>


                    </LinearLayout>



                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/keepOn_button"
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="@string/confirm"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:background="@drawable/registration_button_style"
                        android:layout_marginTop="16dp"/>

                </LinearLayout>

            </ScrollView>


        </RelativeLayout>

    </LinearLayout>


    </LinearLayout>

</RelativeLayout>
