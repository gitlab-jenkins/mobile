<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.daimajia.slider.demo.MainActivity">

    <ImageView
        android:id="@+id/wireframe_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/wireframe_1"
        android:scaleType="fitXY"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/wireframe_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/wireframe_2"
        android:scaleType="fitXY"
        android:visibility="visible"/>

    <com.hampay.mobile.android.component.slider.SliderLayout
        android:id="@+id/slider"
        android:layout_width="match_parent"
        custom:pager_animation="Accordion"
        custom:auto_cycle="true"
        custom:indicator_visibility="visible"
        custom:pager_animation_span="1100"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent"/>

    <LinearLayout
        android:id="@+id/animate_logo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/intro_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_centerInParent="true"/>

        <LinearLayout
            android:id="@+id/intro_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/intro_icon">


            <com.hampay.mobile.android.component.FacedTextView
                android:id="@+id/intro_text"
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:gravity="center"
                android:layout_margin="8dp" />


        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp">


        <com.hampay.mobile.android.component.material.ButtonRectangle
            android:id="@+id/register_button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:background="@color/register_btn_color"
            android:textSize="20sp" />

        <com.hampay.mobile.android.component.FacedTextView
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/register"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <ImageView
            android:id="@+id/image_splash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/splash_bg_color"/>


        <LinearLayout
            android:id="@+id/animate_logo_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/intro_icon_1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo_hampay"/>

            <LinearLayout
                android:id="@+id/intro_title_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/intro_icon_1"
                android:visibility="invisible">

                <com.hampay.mobile.android.component.FacedTextView
                    android:id="@+id/intro_text_1"
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:layout_margin="8dp"
                    android:text="@string/intro_1"
                    android:visibility="invisible"/>


            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>