<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:geekui="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="@color/colorPrimary">

            <com.hampay.mobile.android.component.FacedTextView
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:text="@string/get_password"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"/>

            <com.hampay.mobile.android.component.FacedTextView
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:text="@string/title_contacts_us"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:layout_margin="12dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:background="@drawable/stroke_bg">


            <ImageView
                android:id="@+id/step_icon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/step_icon"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

            <com.hampay.mobile.android.component.FacedTextView
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/register_btn_color"
                android:textSize="18sp"
                android:text="@string/get_password_text_4"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@id/step_icon"/>


        </RelativeLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <EditText
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="#323232"
                android:layout_margin="4dp"/>

            <EditText
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="#323232"
                android:layout_margin="4dp"/>

            <EditText
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="#323232"
                android:layout_margin="4dp"/>

            <EditText
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="#323232"
                android:layout_margin="4dp"/>

            <EditText
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="#323232"
                android:layout_margin="4dp"/>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/confirm_CardView"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/register_btn_color"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="4dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp">

            <com.hampay.mobile.android.component.FacedTextView
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="26sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/confirm"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>

        </android.support.v7.widget.CardView>

    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp">

            <com.hampay.mobile.android.component.FacedTextView
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="0dip"
                android:layout_height="45dp"
                android:layout_weight="0.3"
                android:textColor="@android:color/white"
                android:background="@color/keyword_btn_color"
                android:textSize="26sp"
                android:text="1"
                android:gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"/>

            <com.hampay.mobile.android.component.FacedTextView
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="0dip"
                android:layout_height="45dp"
                android:layout_weight="0.3"
                android:textColor="@android:color/white"
                android:background="@color/keyword_btn_color"
                android:textSize="26sp"
                android:text="2"
                android:gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"/>

            <com.hampay.mobile.android.component.FacedTextView
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="0dip"
                android:layout_height="45dp"
                android:layout_weight="0.3"
                android:textColor="@android:color/white"
                android:background="@color/keyword_btn_color"
                android:textSize="26sp"
                android:text="3"
                android:gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp">

            <com.hampay.mobile.android.component.FacedTextView
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="0dip"
                android:layout_height="45dp"
                android:layout_weight="0.3"
                android:textColor="@android:color/white"
                android:background="@color/keyword_btn_color"
                android:textSize="26sp"
                android:text="4"
                android:gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"/>

            <com.hampay.mobile.android.component.FacedTextView
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="0dip"
                android:layout_height="45dp"
                android:layout_weight="0.3"
                android:textColor="@android:color/white"
                android:background="@color/keyword_btn_color"
                android:textSize="26sp"
                android:text="5"
                android:gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"/>

            <com.hampay.mobile.android.component.FacedTextView
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="0dip"
                android:layout_height="45dp"
                android:layout_weight="0.3"
                android:textColor="@android:color/white"
                android:background="@color/keyword_btn_color"
                android:textSize="26sp"
                android:text="6"
                android:gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp">

            <com.hampay.mobile.android.component.FacedTextView
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="0dip"
                android:layout_height="45dp"
                android:layout_weight="0.3"
                android:textColor="@android:color/white"
                android:background="@color/keyword_btn_color"
                android:textSize="26sp"
                android:text="7"
                android:gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"/>

            <com.hampay.mobile.android.component.FacedTextView
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="0dip"
                android:layout_height="45dp"
                android:layout_weight="0.3"
                android:textColor="@android:color/white"
                android:background="@color/keyword_btn_color"
                android:textSize="26sp"
                android:text="8"
                android:gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"/>

            <com.hampay.mobile.android.component.FacedTextView
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="0dip"
                android:layout_height="45dp"
                android:layout_weight="0.3"
                android:textColor="@android:color/white"
                android:background="@color/keyword_btn_color"
                android:textSize="26sp"
                android:text="9"
                android:gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp">

            <com.hampay.mobile.android.component.FacedTextView
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="0dip"
                android:layout_height="45dp"
                android:layout_weight="0.3"
                android:textColor="@android:color/white"
                android:background="@color/keyword_btn_color"
                android:textSize="20sp"
                android:text="@string/resend"
                android:gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"/>

            <com.hampay.mobile.android.component.FacedTextView
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="0dip"
                android:layout_height="45dp"
                android:layout_weight="0.3"
                android:textColor="@android:color/white"
                android:background="@color/keyword_btn_color"
                android:textSize="26sp"
                android:text="0"
                android:gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"/>

            <com.hampay.mobile.android.component.FacedTextView
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="0dip"
                android:layout_height="45dp"
                android:layout_weight="0.3"
                android:textColor="@android:color/white"
                android:background="@color/keyword_btn_color"
                android:textSize="26sp"
                android:gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"/>



        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
