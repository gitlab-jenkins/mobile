<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary">

        <com.hampay.mobile.android.component.FacedTextView
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:text="@string/confirm_information"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>

        <com.hampay.mobile.android.component.FacedTextView
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:text="@string/title_contacts_us"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:layout_margin="12dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="@drawable/stroke_bg">



        <ImageView
            android:id="@+id/step_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/step_icon_acc"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

        <com.hampay.mobile.android.component.FacedTextView
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/register_btn_color"
            android:textSize="18sp"
            android:text="@string/confirm_information_text"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/step_icon"
            android:layout_marginRight="4dp"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="18dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:background="@drawable/entry_field_bg"
                android:layout_marginTop="6dp">

                <com.hampay.mobile.android.component.FacedEditText
                    android:layout_width="120dp"
                    android:layout_height="fill_parent"
                    android:background="@android:color/transparent"
                    android:textSize="20dp"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:textColor="@android:color/black"
                    android:gravity="center_vertical"
                    android:padding="8dp" />


                <com.hampay.mobile.android.component.FacedTextView
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textColor="@color/normal_text"
                    android:textSize="21sp"
                    android:text="@string/mobile_no"
                    android:layout_alignParentRight="true"
                    android:padding="8dp"
                    android:gravity="center_vertical"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:background="@drawable/entry_field_bg"
                android:layout_marginTop="6dp">

                <com.hampay.mobile.android.component.FacedEditText
                    android:layout_width="120dp"
                    android:layout_height="fill_parent"
                    android:background="@android:color/transparent"
                    android:textSize="20dp"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:textColor="@android:color/black"
                    android:gravity="center_vertical"
                    android:padding="8dp" />


                <com.hampay.mobile.android.component.FacedTextView
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textColor="@color/normal_text"
                    android:textSize="21sp"
                    android:text="@string/name_family"
                    android:layout_alignParentRight="true"
                    android:padding="8dp"
                    android:gravity="center_vertical"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:background="@drawable/entry_field_bg"
                android:layout_marginTop="6dp">

                <com.hampay.mobile.android.component.FacedEditText
                    android:layout_width="120dp"
                    android:layout_height="fill_parent"
                    android:background="@android:color/transparent"
                    android:textSize="20dp"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:textColor="@android:color/black"
                    android:gravity="center_vertical"
                    android:padding="8dp" />


                <com.hampay.mobile.android.component.FacedTextView
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textColor="@color/normal_text"
                    android:textSize="21sp"
                    android:text="@string/account_id"
                    android:layout_alignParentRight="true"
                    android:padding="8dp"
                    android:gravity="center_vertical"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:background="@drawable/entry_field_bg"
                android:layout_marginTop="6dp">

                <com.hampay.mobile.android.component.FacedEditText
                    android:layout_width="120dp"
                    android:layout_height="fill_parent"
                    android:background="@android:color/transparent"
                    android:textSize="21dp"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:textColor="@android:color/black"
                    android:gravity="center_vertical"
                    android:padding="8dp" />


                <com.hampay.mobile.android.component.FacedTextView
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textColor="@color/normal_text"
                    android:textSize="21sp"
                    android:text="@string/iter_code"
                    android:layout_alignParentRight="true"
                    android:padding="8dp"
                    android:gravity="center_vertical"/>

            </RelativeLayout>



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="12dp">

                <com.hampay.mobile.android.component.FacedTextView
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/normal_text"
                    android:textSize="22sp"
                    android:text="@string/correct_data" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/entry_field_bg"
                    android:layout_margin="4dp"
                    android:src="@drawable/tick_icon"
                    android:padding="4dp"/>



            </LinearLayout>


            <android.support.v7.widget.CardView
                android:id="@+id/keepOn_CardView"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@android:color/darker_gray"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="4dp"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp">

                <com.hampay.mobile.android.component.FacedTextView
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="26sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/correct_info"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"/>

            </android.support.v7.widget.CardView>


        </LinearLayout>

    </ScrollView>


</LinearLayout>
