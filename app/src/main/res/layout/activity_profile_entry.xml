<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/help_transparent"
            android:layout_marginLeft="8dp"
            android:background="@color/app_origin"
            android:onClick="userManual"/>

        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            geekui:customTypeface="fonts/vazir_regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_origin"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:text="@string/profile_entry"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_origin" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:layout_margin="8dp">


        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:background="@drawable/second_navigation_gray_fill">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/lock_info"
                android:layout_centerInParent="true"/>


            <ImageView
                android:layout_width="16dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/box_forward_wt"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:background="@drawable/second_navigation_gray_fill">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/mobile_info"
                android:layout_centerInParent="true"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="32dp"
                android:src="@drawable/box_forward_tw"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/box_forward_wt"/>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:background="@drawable/first_navigation_unfill">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/personal_info_green"
                android:layout_centerInParent="true"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="32dp"
                android:background="@android:color/white"
                android:src="@drawable/box_forward_green"/>


        </RelativeLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:verticalScrollbarPosition="right">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="74dp"
                        android:gravity="right|center_vertical"
                        android:background="@drawable/register_border"
                        android:visibility="visible">

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            geekui:customTypeface="fonts/vazir_regular.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/app_origin"
                            android:textSize="15dp"
                            android:text="@string/please_entry_info" />

                        <RelativeLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginRight="12dp">


                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/icon_person"
                                android:layout_centerInParent="true"
                                android:background="@color/app_origin"/>

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                geekui:customTypeface="fonts/vazir_regular.ttf"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:textColor="@android:color/white"
                                android:textSize="12sp"
                                android:text="۱"
                                android:gravity="center"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/badge_text"/>

                        </RelativeLayout>



                    </LinearLayout>

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        geekui:customTypeface="fonts/vazir_regular.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/start_page_text"
                        android:textSize="15dp"
                        android:text="@string/mobile_no"
                        android:layout_gravity="right"
                        android:layout_marginTop="16dp"/>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/entry_field_bg"
                        android:layout_marginTop="6dp">

                        <xyz.homapay.hampay.mobile.android.component.edittext.FacedEditText
                            android:id="@+id/cellNumberValue"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@android:color/transparent"
                            android:layout_marginLeft="58dp"
                            android:layout_marginRight="4dp"
                            android:textSize="15dp"
                            android:inputType="number"
                            android:hint="@string/mobile_no_entry"
                            android:maxLength="9"
                            android:textColor="@android:color/black"
                            android:gravity="center_vertical"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:nextFocusDown="@+id/cardNumberValue"/>

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            geekui:customTypeface="fonts/vazir_regular.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/start_page_text"
                            android:textSize="15dp"
                            android:text="@string/iran_prefix_cell_number"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="40dp"/>

                        <ImageView
                            android:id="@+id/cellNumberIcon"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp" />

                    </RelativeLayout>

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        geekui:customTypeface="fonts/vazir_regular.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="15dp"
                        android:text="@string/bank_card_info"
                        android:layout_gravity="right"
                        android:layout_marginTop="16dp"/>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/entry_field_bg"
                        android:layout_marginTop="6dp">

                        <xyz.homapay.hampay.mobile.android.component.edittext.FacedEditText
                            android:id="@id/cardNumberValue"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@android:color/transparent"
                            android:layout_marginLeft="48dp"
                            android:layout_marginRight="4dp"
                            android:textSize="15dp"
                            android:inputType="number"
                            android:hint="@string/card_no_entry"
                            android:textColor="@android:color/black"
                            android:gravity="center_vertical"
                            android:padding="8dp"
                            android:contentDescription="account"
                            android:maxLength="19" />

                        <xyz.homapay.hampay.mobile.android.component.preloader.Preloader
                            android:id="@+id/preloader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:indicator="LineScale"
                            android:layout_centerVertical="true"
                            android:visibility="gone"/>

                        <ImageView
                            android:id="@+id/cardNumberIcon"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:visibility="gone"/>

                    </RelativeLayout>

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/cardProfile"
                        geekui:customTypeface="fonts/vazir_regular.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/normal_text"
                        android:textSize="13dp"
                        android:gravity="left"
                        android:layout_gravity="left"
                        android:layout_margin="3dp"
                        android:visibility="gone"/>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/entry_field_bg"
                        android:layout_marginTop="6dp">

                        <xyz.homapay.hampay.mobile.android.component.edittext.FacedEditText
                            android:id="@+id/nationalCodeValue"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@android:color/transparent"
                            android:layout_marginLeft="48dp"
                            android:layout_marginRight="4dp"
                            android:textSize="15dp"
                            android:inputType="number"
                            android:hint="@string/iter_code"
                            android:maxLength="12"
                            android:textColor="@android:color/black"
                            android:gravity="center_vertical"
                            android:padding="8dp"
                            android:contentDescription="national" />

                        <ImageView
                            android:id="@+id/nationalCodeIcon"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/entry_field_bg"
                        android:layout_marginTop="6dp">

                        <xyz.homapay.hampay.mobile.android.component.edittext.FacedEditText
                            android:id="@+id/userNameFamily"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@android:color/transparent"
                            android:layout_marginLeft="48dp"
                            android:layout_marginRight="4dp"
                            android:textSize="15dp"
                            android:hint="@string/name_family"
                            android:textColor="@android:color/black"
                            android:gravity="center_vertical"
                            android:lines="1"
                            android:maxLines="1"
                            android:maxLength="30"
                            android:padding="8dp"
                            android:digits=" ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyzاآبپتثجچحخدذرزژسشصضطظعغفقکگلمنوهی"
                            android:contentDescription="account"
                            android:nextFocusDown="@+id/emailValue"
                            android:singleLine="true"/>

                        <ImageView
                            android:id="@+id/userNameFamilyIcon"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/entry_field_bg"
                        android:layout_marginTop="6dp">

                        <xyz.homapay.hampay.mobile.android.component.edittext.FacedEditText
                            android:id="@id/emailValue"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@android:color/transparent"
                            android:layout_marginLeft="48dp"
                            android:layout_marginRight="4dp"
                            android:textSize="15dp"
                            android:inputType="textEmailAddress"
                            android:hint="@string/email"
                            android:textColor="@android:color/black"
                            android:gravity="center_vertical"
                            android:padding="8dp"
                            android:contentDescription="email" />

                        <ImageView
                            android:id="@+id/emailIcon"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <CheckBox
                            android:id="@+id/confirmTacPrivacy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/tac_privacy_checkbox"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            android:id="@+id/tac_privacy_text"
                            geekui:customTypeface="fonts/vazir_regular.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="13dp"
                            android:text="@string/start_tac_privacy"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="28dp"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"/>
                    </RelativeLayout>

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/keepOn_button"
                        geekui:customTypeface="fonts/vazir_regular.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="@string/keep_on"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:background="@drawable/disable_button_style"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"/>


                </LinearLayout>

            </ScrollView>

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>
