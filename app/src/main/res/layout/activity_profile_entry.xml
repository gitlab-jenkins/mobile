<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        android:visibility="visible">

        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:text="@string/profile_entry"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>

        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:text="@string/title_guide"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:onClick="contactUs"
            android:clickable="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:id="@+id/layoutContainer"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp">


                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="30dp"
                    android:layout_weight="0.4"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/step_pass_con"
                        android:layout_centerVertical="true"/>

                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="30dp"
                        android:layout_weight="0.6">



                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="6dp"
                            android:background="@color/normal_text"
                            android:layout_centerInParent="true" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="30dp"
                            android:src="@drawable/triangle_gray"
                            android:layout_centerVertical="true"
                            android:background="@android:color/white"/>




                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="30dp"
                        android:layout_weight="0.4">

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="6dp"
                            android:background="@color/normal_text"
                            android:layout_centerInParent="true" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="20dp"
                            android:src="@drawable/step_pay_icon"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:background="@android:color/white"
                            />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="30dp"
                    android:layout_weight="0.3"
                    android:gravity="center_vertical">

                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="30dp"
                        android:layout_weight="0.5">

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="6dp"
                            android:background="@color/normal_text"
                            android:layout_centerInParent="true" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="30dp"
                            android:src="@drawable/triangle_gray"
                            android:layout_centerVertical="true"
                            android:background="@android:color/white"/>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="30dp"
                        android:layout_weight="0.5">

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="6dp"
                            android:background="@color/normal_text"
                            android:layout_centerInParent="true" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/step_mobile_icon"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:background="@android:color/white"/>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="30dp"
                    android:layout_weight="0.3"
                    android:gravity="center_vertical">

                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="30dp"
                        android:layout_weight="0.5">

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="6dp"
                            android:background="@color/normal_text"
                            android:layout_centerInParent="true" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="30dp"
                            android:src="@drawable/triangle_gray"
                            android:layout_centerVertical="true"
                            android:background="@android:color/white"/>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="30dp"
                        android:layout_weight="0.5">

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="6dp"
                            android:background="@color/register_btn_color"
                            android:layout_centerInParent="true" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/step_account_icon"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:background="@android:color/white"/>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>



            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:verticalScrollbarPosition="right">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="74dp"
                        android:gravity="right|center_vertical"
                        android:background="@drawable/stroke_bg"
                        android:visibility="visible">

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/register_btn_color"
                            android:textSize="15dp"
                            android:text="@string/please_entry_info" />

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/step_icon"
                            android:layout_margin="12dp"/>

                    </LinearLayout>

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="15dp"
                        android:text="@string/mobile_no"
                        android:layout_gravity="right"
                        android:layout_marginTop="16dp"/>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/entry_field_bg"
                        android:layout_marginTop="6dp">

                        <xyz.homapay.hampay.mobile.android.component.edittext.FacedEditText
                            android:id="@+id/cellNumberValue"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@android:color/transparent"
                            android:layout_marginLeft="58dp"
                            android:textSize="15dp"
                            android:inputType="number"
                            android:hint="@string/mobile_no_entry"
                            android:maxLength="9"
                            android:textColor="@android:color/black"
                            android:gravity="center_vertical"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:text="09126157905"
                            android:contentDescription="phone"/>

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/normal_text"
                            android:textSize="15dp"
                            android:text="@string/iran_prefix_cell_number"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="40dp"/>

                        <ImageView
                            android:id="@+id/cellNumberIcon"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"/>

                    </RelativeLayout>

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="15dp"
                        android:text="@string/bank_card_info"
                        android:layout_gravity="right"
                        android:layout_marginTop="16dp"/>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/entry_field_bg"
                        android:layout_marginTop="6dp">

                        <xyz.homapay.hampay.mobile.android.component.edittext.FacedEditText
                            android:id="@+id/cardNumberValue"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@android:color/transparent"
                            android:layout_marginLeft="48dp"
                            android:textSize="15dp"
                            android:inputType="number"
                            android:hint="@string/card_no_entry"
                            android:textColor="@android:color/black"
                            android:gravity="center_vertical"
                            android:padding="8dp"
                            android:contentDescription="account"
                            android:maxLength="19"
                            android:text="5859-4710-1018-8708"/>

                        <ProgressBar
                            android:id="@+id/cardValidatorProgress"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:visibility="gone"
                            android:indeterminateDrawable="@drawable/fragment_progress"/>

                        <ImageView
                            android:id="@+id/cardNumberIcon"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:visibility="gone"/>

                    </RelativeLayout>

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/cardProfile"
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/normal_text"
                        android:textSize="13dp"
                        android:gravity="left"
                        android:layout_gravity="left"
                        android:layout_margin="3dp"/>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/entry_field_bg"
                        android:layout_marginTop="6dp">

                        <xyz.homapay.hampay.mobile.android.component.edittext.FacedEditText
                            android:id="@+id/nationalCodeValue"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@android:color/transparent"
                            android:layout_marginLeft="48dp"
                            android:textSize="15dp"
                            android:inputType="number"
                            android:hint="@string/iter_code"
                            android:maxLength="12"
                            android:textColor="@android:color/black"
                            android:gravity="center_vertical"
                            android:padding="8dp"
                            android:contentDescription="national"
                            android:text="4899915667"/>

                        <ImageView
                            android:id="@+id/nationalCodeIcon"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/entry_field_bg"
                        android:layout_marginTop="6dp">

                        <xyz.homapay.hampay.mobile.android.component.edittext.FacedEditText
                            android:id="@+id/userNameFamily"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@android:color/transparent"
                            android:layout_marginLeft="48dp"
                            android:textSize="15dp"
                            android:hint="@string/name_family"
                            android:textColor="@android:color/black"
                            android:gravity="center_vertical"
                            android:padding="8dp"
                            android:contentDescription="account"
                            android:text="amir"/>

                        <ImageView
                            android:id="@+id/userNameFamilyIcon"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/entry_field_bg"
                        android:layout_marginTop="6dp">

                        <xyz.homapay.hampay.mobile.android.component.edittext.FacedEditText
                            android:id="@+id/emailValue"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@android:color/transparent"
                            android:layout_marginLeft="48dp"
                            android:layout_marginRight="34dp"
                            android:textSize="15dp"
                            android:inputType="textEmailAddress"
                            android:hint="@string/email"
                            android:textColor="@android:color/black"
                            android:gravity="center_vertical"
                            android:padding="8dp"
                            android:contentDescription="email"
                            android:text="amirh.sharafkar@gmail.com"/>

                        <ImageView
                            android:id="@+id/emailIcon"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"/>

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp">


                        <xyz.homapay.hampay.mobile.android.component.material.ButtonRectangle
                            android:id="@+id/keepOn_button"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_centerHorizontal="true"
                            android:background="@color/register_btn_color"
                            android:textSize="16dp"
                            android:contentDescription="keep_on"/>

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:textColor="@android:color/white"
                            android:textSize="16dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="@string/keep_on"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"/>

                    </RelativeLayout>


                </LinearLayout>

            </ScrollView>

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>
