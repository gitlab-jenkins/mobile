<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="@color/colorPrimary">

            <com.hampay.mobile.android.component.FacedTextView
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:text="@string/mobile_no_verification"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"/>

            <com.hampay.mobile.android.component.FacedTextView
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:text="@string/title_contacts_us"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="12dp"
                android:id="@+id/layoutContainer"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="20dp"
                android:gravity="center">



                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="12dp"
                    android:layout_weight="0.65">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/step_arrow_g"
                        />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="6dp"
                        android:layout_weight="0.65"
                        android:background="@color/register_btn_color"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp">
                    </RelativeLayout>



                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="6dp"
                    android:layout_weight="0.35"
                    android:background="@color/register_btn_color">
                </RelativeLayout>

            </LinearLayout>


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/step_account_icon"
                android:layout_alignParentRight="true"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/step_mobile_icon"
                android:layout_alignParentLeft="true"/>


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/step_circle_3"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:gravity="center">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/hampay_colored"
                    />

                <com.hampay.mobile.android.component.FacedTextView
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/normal_text"
                    android:textSize="28sp"
                    android:text="@string/app_name"
                    android:layout_marginTop="-20dp"/>

            </LinearLayout>

        </RelativeLayout>

        <com.hampay.mobile.android.component.FacedTextView
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/normal_text"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_margin="8dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/sms_verification_text" />

    </LinearLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/keepOn_CardView"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/register_btn_color"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="4dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp">

        <com.hampay.mobile.android.component.FacedTextView
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/keep_on"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"/>

    </android.support.v7.widget.CardView>


</RelativeLayout>
