<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:background="@drawable/dialog_pay_theme"
    android:orientation="vertical"
    android:padding="8dp">


    <xyz.homapay.hampay.mobile.android.component.FacedTextView
        geekui:customTypeface="fonts/iran_sans.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/normal_text"
        android:textSize="15dp"
        android:text="@string/remove_password_text"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>




    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            android:id="@+id/cancel_remove_password"
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tac_reject"
            android:textSize="14dp"
            android:text="@string/cancel_remove_password" />

        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            android:id="@+id/re_registeration"
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tac_accept"
            android:textSize="14dp"
            android:text="@string/re_registration_done"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</LinearLayout>