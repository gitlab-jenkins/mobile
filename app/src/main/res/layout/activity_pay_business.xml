<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/nav_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/back_actionbar"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:padding="12dp"
            android:clickable="true"
            android:onClick="backActionBar"/>

        <com.hampay.mobile.android.component.FacedTextView
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:text="@string/payment"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="64dp"/>


    </RelativeLayout>


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="20dp"
                android:gravity="right">

                <com.hampay.mobile.android.component.FacedTextView
                    android:id="@+id/business_name_code"
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:gravity="right"
                    android:layout_marginRight="4dp"
                    android:text="ssss"/>

                <com.hampay.mobile.android.component.FacedTextView
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/normal_text"
                    android:textSize="20sp"
                    android:text="@string/pay_to"
                    android:gravity="right"
                    android:layout_gravity="right"
                    />

            </LinearLayout>


            <com.hampay.mobile.android.component.FacedTextView
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:text="@string/payment_message"
                android:layout_marginRight="20dp"/>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="96dp"
                android:background="@drawable/entry_field_bg"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp">


                <com.hampay.mobile.android.component.edittext.FacedEditText
                    android:id="@+id/contact_message"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@android:color/transparent"
                    android:textSize="18sp"
                    android:padding="6dp"
                    android:textColor="@color/normal_text"
                    android:singleLine="true"
                    android:hint="@string/insert_message"
                    android:gravity="top"/>


            </RelativeLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_margin="20dp">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <com.hampay.mobile.android.component.FacedTextView
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:text="@string/price"
                        android:layout_alignParentRight="true"/>

                    <ImageView
                        android:id="@+id/credit_value_icon"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />

                </RelativeLayout>




                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/entry_field_bg">


                    <com.hampay.mobile.android.component.edittext.FacedEditText
                        android:id="@+id/credit_value"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@android:color/transparent"
                        android:textSize="18sp"
                        android:padding="6dp"
                        android:textColor="@color/normal_text"
                        android:singleLine="true"
                        android:hint="@string/insert_price"
                        android:inputType="number"
                        android:lines="1"/>


                </RelativeLayout>


            </LinearLayout>


            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_margin="20dp">


                <com.hampay.mobile.android.component.material.ButtonRectangle
                    android:id="@+id/pay_to_business_button"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerHorizontal="true"
                    android:background="@color/register_btn_color"
                    android:textSize="20sp" />

                <com.hampay.mobile.android.component.FacedTextView
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/payment"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
