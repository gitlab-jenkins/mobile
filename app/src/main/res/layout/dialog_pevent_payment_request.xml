<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@drawable/dialog_failure_style"
    android:orientation="vertical"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_failure_title_style">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_warning"
            android:layout_centerInParent="true"
            android:padding="4dp"/>

    </RelativeLayout>



    <xyz.homapay.hampay.mobile.android.component.FacedTextView
        android:id="@+id/message"
        geekui:customTypeface="fonts/vazir_regular.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/modal_text"
        android:textSize="15dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:gravity="center"
        android:text="@string/prevent_payment_request"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp"
        android:gravity="center">


        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            android:id="@+id/prevent_payment_request"
            geekui:customTypeface="fonts/vazir_regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/prevent_payment_request_cancel"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@drawable/modal_failure_button_style"
            android:layout_alignParentRight="true" />

    </LinearLayout>
</LinearLayout>