<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/back"
            android:layout_marginLeft="8dp"
            android:padding="4dp"/>

        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_origin"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:text="@string/detail_transaction"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_origin" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_margin="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="right"
                    android:layout_marginRight="2dp">

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/status_text"
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:text="دریافت"/>

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/user_name"
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_menu_title"
                        android:textSize="15dp"
                        android:text="هومن امینی"/>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/transaction_placeholder"
                        android:scaleType="fitXY"
                        android:background="@color/page_title"
                        android:layout_gravity="center"/>

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/curve_images"/>

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="12dp">

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    android:id="@+id/amountValue"
                    geekui:customTypeface="fonts/iran_sans_bold.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/account_details_text"
                    android:textSize="20sp"
                    android:text="۱۵۰.۰۰۰.۰۰۰"/>

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/account_details_text"
                    android:textSize="12sp"
                    android:text="@string/currency_rials"/>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/main_menu_title"
                android:layout_margin="12dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="12dp"
                android:layout_gravity="right">

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    android:id="@+id/paymentRequestCode"
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/page_title"
                    android:textSize="15dp"
                    android:text="123456"
                    android:layout_marginRight="4dp"/>

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_menu_title"
                    android:textSize="15dp"
                    android:text="@string/payment_request_code"/>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/main_menu_title"
                android:layout_margin="12dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="12dp"
                android:layout_gravity="right">

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    android:id="@+id/transactionDateTime"
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_menu_title"
                    android:textSize="15dp"
                    android:text="123456"
                    android:layout_marginRight="4dp"/>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/main_menu_title"
                android:layout_margin="12dp"/>


            <LinearLayout
                android:id="@+id/creditInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="12dp">

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/account_details_text"
                        android:textSize="18sp"
                        android:text="@string/card_number"
                        android:layout_gravity="right"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <include layout="@layout/masked_card_number"/>

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            android:id="@+id/cardNumberValue"
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/account_details_text"
                            android:textSize="18dp"
                            android:text="@string/card_number"
                            android:layout_marginRight="8dp"/>

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_margin="12dp">

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/bankName"
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/account_details_text"
                        android:textSize="20sp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="2dp"/>


                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/main_menu_title"
                android:layout_margin="12dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="12dp"
                android:layout_gravity="right">

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    android:id="@+id/cell_number"
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_menu_title"
                    android:textSize="15dp"
                    android:text="123456"
                    android:layout_marginRight="4dp"/>

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_menu_title"
                    android:textSize="15dp"
                    android:text="@string/cell_number"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/responseMessage_ll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="12dp"
                    android:background="@android:color/darker_gray"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="right"
                    android:layout_marginRight="44dp"
                    android:layout_marginTop="12dp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:layout_marginRight="8dp">



                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/normal_text"
                            android:textSize="15dp"
                            android:text="@string/more_transaction_detail"
                            android:gravity="right"
                            android:layout_gravity="right"
                            />

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            android:id="@+id/reject_message"
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="15dp"
                            android:gravity="right"
                            android:layout_marginRight="4dp"
                            android:text="ssss"/>


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="96dp"
                android:background="@drawable/entry_field_bg"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:visibility="gone">


                <xyz.homapay.hampay.mobile.android.component.edittext.FacedEditText
                    android:id="@+id/contact_message"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/register_border"
                    android:textSize="13dp"
                    android:padding="6dp"
                    android:textColor="@color/normal_text"
                    android:hint="@string/insert_message"
                    android:gravity="top" />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/pay_to_one_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="12dp"
                android:layout_gravity="right">

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/page_title"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:layout_marginRight="4dp"
                    android:text="@string/payment"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/add_payment_request"
                    android:background="@color/page_title"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

