<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:geekui="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/help_blue"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"/>

                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/page_title"
                    android:textSize="20sp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/mobile_no_verification"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/page_title"
                android:layout_marginTop="4dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="32dp"
            android:orientation="horizontal"
            android:layout_margin="8dp">


            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:background="@drawable/second_navigation_gray_fill">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/lock_info"
                    android:layout_centerInParent="true"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="32dp"
                    android:background="@android:color/white"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/box_forward_wt"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:background="@drawable/second_navigation_unfill">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/mobile_info_green"
                    android:layout_centerInParent="true"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="32dp"
                    android:src="@drawable/box_forward_green"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/box_forward_tt"
                    android:layout_centerVertical="true"
                    />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:background="@drawable/first_navigation_fill">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/personal_info"
                    android:layout_centerInParent="true"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="32dp"
                    android:background="@android:color/white"
                    android:src="@drawable/box_forward_tg"/>


            </RelativeLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right|center_vertical"
                        android:background="@drawable/stroke_bg">

                        <RelativeLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginRight="12dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true">


                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/icon_mobile"
                                android:layout_centerInParent="true"/>

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                geekui:customTypeface="fonts/iran_sans.ttf"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:textColor="@android:color/white"
                                android:textSize="12sp"
                                android:text="۲"
                                android:gravity="center"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/badge_text"/>

                        </RelativeLayout>

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            android:id="@+id/sms_delivery_text"
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/page_title"
                            android:textSize="14dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="@string/deliver_verification"
                            android:layout_centerVertical="true"
                            android:gravity="right"
                            android:layout_marginRight="64dp"/>


                    </RelativeLayout>

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/remain_timer"
                        geekui:customTypeface="fonts/iran_sans_bold.ttf"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:textColor="@color/page_title"
                        android:textSize="17dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="۰۳:۰۰"
                        android:layout_marginTop="18dp"/>


                    <xyz.homapay.hampay.mobile.android.component.numericalprogressbar.NumberProgressBar
                        android:id="@+id/numberProgressBar"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        style="@style/NumberProgressBar_Relax_Blue"
                        custom:progress_current="0"
                        custom:progress_max="180"
                        android:layout_height="wrap_content"
                        custom:progress_text_size="17dp"
                        custom:progress_unreached_bar_height="1.5dp"
                        custom:progress_reached_bar_height="3.0dp"/>

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/resend_active_code"
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="@string/resend"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:background="@drawable/registration_button_style"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp"
                        android:visibility="gone"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/activation_holder"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_margin="18dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/register_border"
                    android:contentDescription="activation_holder">

                    <RelativeLayout
                        android:layout_width="240dp"
                        android:layout_height="50dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">

                        <View
                            android:layout_width="230dp"
                            android:layout_height="2dp"
                            android:background="@color/page_title"
                            android:layout_alignParentBottom="true"/>

                        <View
                            android:layout_width="2dp"
                            android:layout_height="16dp"
                            android:background="@color/page_title"
                            android:layout_alignParentBottom="true"/>

                        <View
                            android:layout_width="2dp"
                            android:layout_height="16dp"
                            android:background="@color/page_title"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_centerInParent="true">

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                android:id="@+id/input_digit_1"
                                geekui:customTypeface="fonts/iran_sans_bold.ttf"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:textColor="@color/start_page_text"
                                android:textSize="20dp"
                                android:gravity="bottom|center_horizontal"
                                android:layout_gravity="center"
                                android:background="@drawable/sms_value_border"
                                android:layout_margin="4dp" />


                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                android:id="@+id/input_digit_2"
                                geekui:customTypeface="fonts/iran_sans_bold.ttf"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:textColor="@color/start_page_text"
                                android:textSize="20dp"
                                android:gravity="bottom|center_horizontal"
                                android:layout_gravity="center"
                                android:background="@drawable/sms_value_border"
                                android:layout_margin="4dp"/>

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                android:id="@+id/input_digit_3"
                                geekui:customTypeface="fonts/iran_sans_bold.ttf"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:textColor="@color/start_page_text"
                                android:textSize="20dp"
                                android:gravity="bottom|center_horizontal"
                                android:layout_gravity="center"
                                android:background="@drawable/sms_value_border"
                                android:layout_margin="4dp"/>

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                android:id="@+id/input_digit_4"
                                geekui:customTypeface="fonts/iran_sans_bold.ttf"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:textColor="@color/start_page_text"
                                android:textSize="20dp"
                                android:gravity="bottom|center_horizontal"
                                android:layout_gravity="center"
                                android:background="@drawable/sms_value_border"
                                android:layout_margin="4dp"/>

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                android:id="@+id/input_digit_5"
                                geekui:customTypeface="fonts/iran_sans_bold.ttf"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:textColor="@color/start_page_text"
                                android:textSize="20dp"
                                android:gravity="bottom|center_horizontal"
                                android:layout_gravity="center"
                                android:background="@drawable/sms_value_border"
                                android:layout_margin="4dp"/>


                        </LinearLayout>


                    </RelativeLayout>


                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="220dp"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/keyboard"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <include
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/sms_keyboard"/>
    </LinearLayout>


</RelativeLayout>
