<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary">


        <com.hampay.mobile.android.component.FacedTextView
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:text="@string/title_contacts_us"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>

        <com.hampay.mobile.android.component.FacedTextView
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:text="@string/complete_registarion"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/layoutContainer"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">


        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="20dp"
            android:layout_weight="0.4"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/step_pass_con_g"
                android:layout_centerVertical="true"/>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="30dp"
                android:layout_weight="0.3">



                <View
                    android:layout_width="fill_parent"
                    android:layout_height="6dp"
                    android:background="@color/register_btn_color"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:src="@drawable/triangle_green"
                    android:layout_centerVertical="true"
                    android:background="@android:color/white"/>




            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="20dp"
                android:layout_weight="0.7">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="6dp"
                    android:background="@color/register_btn_color"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:src="@drawable/step_pay_icon_g"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/white"
                    />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="20dp"
            android:layout_weight="0.3"
            android:gravity="center_vertical">

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="30dp"
                android:layout_weight="0.2">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="6dp"
                    android:background="@color/normal_text"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:src="@drawable/triangle_green"
                    android:layout_centerVertical="true"
                    android:background="@android:color/white"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="20dp"
                android:layout_weight="0.8">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="6dp"
                    android:background="@color/register_btn_color"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/step_mobile_icon_g"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/white"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="20dp"
            android:layout_weight="0.3"
            android:gravity="center_vertical">

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="30dp"
                android:layout_weight="0.5">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="6dp"
                    android:background="@color/register_btn_color"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:src="@drawable/triangle_green"
                    android:layout_centerVertical="true"
                    android:background="@android:color/white"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="20dp"
                android:layout_weight="0.5">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="6dp"
                    android:background="@color/register_btn_color"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/step_account_icon"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/white"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:src="@drawable/step_circle_6"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:gravity="center">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/hampay_colored"
                    />

                <com.hampay.mobile.android.component.FacedTextView
                    geekui:customTypeface="fonts/iran_sans.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/normal_text"
                    android:textSize="28sp"
                    android:text="@string/app_name"
                    android:layout_marginTop="-20dp"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp">

            <com.hampay.mobile.android.component.FacedTextView
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:gravity="center"
                android:layout_gravity="right"
                android:text="@string/complete_registarion_text_1"
                android:layout_alignParentRight="true"
                android:layout_marginRight="24dp"/>


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/smile"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>




        <com.hampay.mobile.android.component.FacedTextView
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/normal_text"
            android:textSize="20sp"
            android:gravity="right"
            android:layout_marginRight="20dp"
            android:layout_gravity="right"
            android:text="@string/complete_registarion_text_2"
            />

    </LinearLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/hampay_login_CardView"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/register_btn_color"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="4dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15dp">

        <com.hampay.mobile.android.component.FacedTextView
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/login_hampay"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"/>

    </android.support.v7.widget.CardView>

</LinearLayout>