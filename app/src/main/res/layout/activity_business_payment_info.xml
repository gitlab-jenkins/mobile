<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/back"
            android:onClick="backActionBar"
            android:padding="12dp"/>

        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_origin"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:text="@string/business_payment_info"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_origin" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_margin="12dp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="right"
                        android:layout_margin="4dp">

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            android:id="@+id/business_name"
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main_menu_title"
                            android:textSize="15dp"
                            android:gravity="center"
                            android:layout_marginRight="8dp"
                            android:text="نام کسب و کار"/>


                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            android:id="@+id/business_hampay_id"
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main_menu_title"
                            android:textSize="13dp"
                            android:gravity="center"
                            android:layout_marginRight="8dp"
                            android:text="شناسه: "/>


                    </LinearLayout>


                    <ImageView
                        android:id="@+id/business_image"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/transaction_placeholder"
                        android:background="@color/page_title"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="12dp">

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_menu_title"
                        android:textSize="15dp"
                        android:text="@string/amount_value"
                        android:layout_alignParentRight="true"/>

                    <LinearLayout
                        android:id="@+id/password_holder"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="vertical"
                        android:background="@drawable/register_border"
                        android:padding="8dp">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp">

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                geekui:customTypeface="fonts/iran_sans.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/main_menu_title"
                                android:textSize="15dp"
                                android:text="@string/currency_rials"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="4dp"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/page_title"
                                android:layout_alignParentBottom="true"/>

                            <View
                                android:layout_width="2dp"
                                android:layout_height="16dp"
                                android:background="@color/page_title"
                                android:layout_alignParentBottom="true"/>

                            <View
                                android:layout_width="2dp"
                                android:layout_height="16dp"
                                android:background="@color/page_title"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_centerHorizontal="true"
                                android:gravity="center_vertical">

                                <xyz.homapay.hampay.mobile.android.component.edittext.FacedEditText
                                    android:id="@+id/amount_value"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="18sp"
                                    android:textColor="@color/main_menu_title"
                                    android:singleLine="true"
                                    android:maxLength="15"
                                    android:inputType="number"
                                    android:background="@color/transparency"
                                    android:padding="6dp"
                                    android:gravity="center" />


                            </LinearLayout>


                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp">

                    <LinearLayout
                        android:id="@+id/add_vat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical">

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main_menu_title"
                            android:textSize="14sp"
                            android:text="@string/vat"
                            android:layout_marginRight="4dp"/>

                        <ImageView
                            android:id="@+id/vat_icon"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/add_vat"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main_menu_title"
                            android:textSize="14sp"
                            android:text="@string/currency_rials"
                            android:layout_marginRight="4dp"/>

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            android:id="@+id/vat_value"
                            geekui:customTypeface="fonts/iran_sans_bold.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main_menu_title"
                            android:textSize="14sp"
                            android:text="۰"
                            android:layout_marginRight="4dp"/>

                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/account_details_text"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="12dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/total_amount_bg">

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        geekui:customTypeface="fonts/iran_sans_bold.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/page_title"
                        android:textSize="22sp"
                        android:text="@string/request_payment_total"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="2dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp">

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/page_title"
                            android:textSize="14sp"
                            android:text="@string/currency_rials"/>

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            android:id="@+id/amount_total"
                            geekui:customTypeface="fonts/iran_sans_bold.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/page_title"
                            android:textSize="22sp"
                            android:layout_marginLeft="2dp"/>

                    </LinearLayout>




                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/account_details_text"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="12dp"/>

                <ImageView
                    android:id="@+id/payment_button"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/hampay_payment_button"/>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>


</LinearLayout>
