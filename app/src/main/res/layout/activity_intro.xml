<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout">


    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/introViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/circle_1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/circle"
                android:layout_margin="1dp"/>

            <ImageView
                android:id="@+id/circle_2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/circle_transparency"
                android:layout_margin="1dp"/>

            <ImageView
                android:id="@+id/circle_3"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/circle_transparency"
                android:layout_margin="1dp"/>

            <ImageView
                android:id="@+id/circle_4"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/circle_transparency"
                android:layout_margin="1dp"/>

            <ImageView
                android:id="@+id/circle_5"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/circle_transparency"
                android:layout_margin="1dp"/>

        </LinearLayout>


        <android.support.v7.widget.CardView
            android:id="@+id/register_CardView"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="180dp"
            android:layout_height="50dp"
            card_view:cardBackgroundColor="@color/register_btn_color"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="10dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp">

            <com.hampay.mobile.android.component.FacedTextView
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="26sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/register"
                />

            


        </android.support.v7.widget.CardView>





    </LinearLayout>



</RelativeLayout>