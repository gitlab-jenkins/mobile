<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:gravity="right"
    android:background="@drawable/dialog_pay_theme"
    android:orientation="vertical"
    android:padding="15dp">

    <com.hampay.mobile.android.component.FacedTextView
        android:id="@+id/pay_one_confirm_ref"
        geekui:customTypeface="fonts/iran_sans.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/normal_text"
        android:textSize="15dp"
        android:text="@string/pay_one_ref"/>


    <com.hampay.mobile.android.component.FacedTextView
        android:id="@+id/confirmation"
        geekui:customTypeface="fonts/iran_sans.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/pay_confirm"
        android:textSize="14dp"
        android:text="@string/pay_ok"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>



</LinearLayout>