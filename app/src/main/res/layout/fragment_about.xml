<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:layout_width="144dp"
                android:layout_height="48dp"
                android:src="@drawable/homapay_logo"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="18dp">

                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="48dp"
                    android:src="@drawable/saman_logo"
                    android:layout_gravity="center_horizontal" />

                <WebView
                    android:id="@+id/webview"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerInParent="true">
                </WebView>

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/sarava_logo"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/help_strok"/>

            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/normal_text"
                android:textSize="14sp"
                android:layout_margin="8dp"
                android:gravity="right"
                android:layout_gravity="right"
                android:text="@string/about_text_3"
                android:lineSpacingExtra="8dp"/>


            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/help_strok"/>

            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/normal_text"
                android:textSize="13dp"
                android:layout_margin="8dp"
                android:gravity="right"
                android:layout_gravity="right"
                android:text="@string/about_text_4"
                android:lineSpacingExtra="8dp"/>

            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/normal_text"
                android:textSize="14sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="right"
                android:layout_gravity="right"
                android:text="@string/about_text_5"
                android:lineSpacingExtra="8dp"/>

            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/normal_text"
                android:textSize="13dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="right"
                android:layout_gravity="right"
                android:text="@string/about_text_6"
                android:lineSpacingExtra="8dp"/>


            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/help_strok"/>

            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                android:id="@+id/version"
                geekui:customTypeface="fonts/iran_sans.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/normal_text"
                android:textSize="13dp"
                android:layout_margin="8dp"
                android:gravity="right"
                android:layout_gravity="right"
                android:text="@string/about_text_7"
                android:lineSpacingExtra="8dp"/>



        </LinearLayout>

    </ScrollView>




</LinearLayout>