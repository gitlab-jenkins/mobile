<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">


                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginRight="5dp">


                    <xyz.homapay.hampay.mobile.android.component.material.ButtonRectangle
                        android:id="@+id/pay_to_one_button"
                        android:layout_width="fill_parent"
                        android:layout_height="55dp"
                        android:layout_centerHorizontal="true"
                        android:background="@color/normal_text"
                        android:textSize="16dp"
                        android:contentDescription="verify"/>

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="12dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_centerInParent="true"
                        android:text="@string/one_request" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="5dp">


                    <xyz.homapay.hampay.mobile.android.component.material.ButtonRectangle
                        android:id="@+id/request_business_button"
                        android:layout_width="fill_parent"
                        android:layout_height="55dp"
                        android:layout_centerHorizontal="true"
                        android:background="@color/user_change_status"
                        android:textSize="16dp"
                        android:contentDescription="verify"/>

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="12dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_centerInParent="true"
                        android:text="@string/business_request" />

                </RelativeLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">


                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_weight="0.5">

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/request_business_name"
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:textColor="@android:color/black"
                        android:textSize="12dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_centerInParent="true"
                        android:text="@string/business_pay_name"
                        android:background="@android:color/white"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_weight="0.5">

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/request_business_code"
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:textColor="@android:color/black"
                        android:textSize="12dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_centerInParent="true"
                        android:text="@string/business_pay_code"
                        android:background="#e6e7e8"/>

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#e6e7e8"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/activation_holder"
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:contentDescription="activation_holder">


                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/input_digit_1"
                        geekui:customTypeface="fonts/iran_sans_bold.ttf"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/register_btn_color"
                        android:textSize="20dp"
                        android:gravity="bottom|center_horizontal"
                        android:layout_gravity="center"
                        android:background="@drawable/remember_edittext_bg"
                        android:layout_margin="8dp" />


                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/input_digit_2"
                        geekui:customTypeface="fonts/iran_sans_bold.ttf"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/register_btn_color"
                        android:textSize="20dp"
                        android:gravity="bottom|center_horizontal"
                        android:layout_gravity="center"
                        android:background="@drawable/remember_edittext_bg"
                        android:layout_margin="8dp"/>

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/input_digit_3"
                        geekui:customTypeface="fonts/iran_sans_bold.ttf"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/register_btn_color"
                        android:textSize="20dp"
                        android:gravity="bottom|center_horizontal"
                        android:layout_gravity="center"
                        android:background="@drawable/remember_edittext_bg"
                        android:layout_margin="8dp"/>

                    <View
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/input_digit_4"
                        geekui:customTypeface="fonts/iran_sans_bold.ttf"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/register_btn_color"
                        android:textSize="20dp"
                        android:gravity="bottom|center_horizontal"
                        android:layout_gravity="center"
                        android:background="@drawable/remember_edittext_bg"
                        android:layout_margin="8dp"/>

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/input_digit_5"
                        geekui:customTypeface="fonts/iran_sans_bold.ttf"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/register_btn_color"
                        android:textSize="20dp"
                        android:gravity="bottom|center_horizontal"
                        android:layout_gravity="center"
                        android:background="@drawable/remember_edittext_bg"
                        android:layout_margin="8dp"/>

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/input_digit_6"
                        geekui:customTypeface="fonts/iran_sans_bold.ttf"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/register_btn_color"
                        android:textSize="20dp"
                        android:gravity="bottom|center_horizontal"
                        android:layout_gravity="center"
                        android:background="@drawable/remember_edittext_bg"
                        android:layout_margin="8dp"/>



                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp">


                    <xyz.homapay.hampay.mobile.android.component.material.ButtonRectangle
                        android:id="@+id/business_request_pay_button"
                        android:layout_width="160dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:background="@color/register_btn_color"
                        android:textSize="16dp"
                        android:contentDescription="verify"/>

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="12dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_centerInParent="true"
                        android:text="@string/payment" />

                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:id="@+id/keyboard"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <include
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/password_keyboard"/>
    </LinearLayout>

    <View
        android:id="@+id/hide_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:visibility="gone">

    </View>


</RelativeLayout>