<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false">

    <ImageView
        android:id="@+id/cloud"
        android:layout_width="330dp"
        android:layout_height="280dp"
        android:src="@drawable/intro_clouds_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"/>

    <ImageView
        android:id="@+id/centerImage"
        android:layout_width="260dp"
        android:layout_height="280dp"
        app:srcCompat="@drawable/intro_merchant"
        tools:ignore="VectorDrawableCompat"
        android:layout_alignTop="@+id/cloud"
        android:layout_alignRight="@+id/image15"
        android:layout_alignEnd="@+id/image15" />


    <ImageView
        android:id="@+id/image5"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:srcCompat="@drawable/ic_intro_circle"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="130dp"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/image15"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginLeft="315dp"
        android:layout_marginTop="165dp"
        app:srcCompat="@drawable/ic_intro_plus"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/image8"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginLeft="315dp"
        android:layout_marginTop="200dp"
        app:srcCompat="@drawable/intro_large_line"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="255dp"
        app:srcCompat="@drawable/ic_intro_plus"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="105dp"
        app:srcCompat="@drawable/ic_intro_cross"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="100dp"
        app:srcCompat="@drawable/ic_intro_small_line"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:srcCompat="@drawable/ic_intro_circle"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="110dp"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="130dp"
        app:srcCompat="@drawable/ic_intro_cross"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="180dp"
        app:srcCompat="@drawable/intro_large_line"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="235dp"
        app:srcCompat="@drawable/ic_intro_small_line"
        tools:ignore="VectorDrawableCompat" />

</RelativeLayout>