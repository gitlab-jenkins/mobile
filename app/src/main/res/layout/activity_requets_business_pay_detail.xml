<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/back"
                android:onClick="backActionBar"
                android:padding="12dp"/>

            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                geekui:customTypeface="fonts/vazir_regular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_origin"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:text="@string/request_pay_detail"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/app_origin" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:id="@+id/paymentScroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="right"
                                android:layout_marginRight="2dp">

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    android:id="@+id/business_name"
                                    geekui:customTypeface="fonts/vazir_regular.ttf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/main_menu_title"
                                    android:textSize="15sp" />

                            </LinearLayout>

                            <FrameLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp">

                                <ImageView
                                    android:id="@+id/business_image"
                                    android:layout_width="44dp"
                                    android:layout_height="44dp"
                                    android:src="@drawable/user_placeholder"
                                    android:scaleType="fitXY"
                                    android:background="@color/page_title"
                                    android:layout_gravity="center"/>

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:background="@drawable/curve_images"/>

                            </FrameLayout>

                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/purchase_status_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/account_details_text"
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="8dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:gravity="right">

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                android:id="@+id/purchase_status"
                                geekui:customTypeface="fonts/vazir_regular.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/account_details_text"
                                android:textSize="15dp"
                                android:layout_marginRight="2dp"/>

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                geekui:customTypeface="fonts/vazir_regular.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/account_details_text"
                                android:textSize="15dp"
                                android:text="@string/purchase_payment_status"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/purchase_payer_name_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/account_details_text"
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="8dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:gravity="right">

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                android:id="@+id/purchase_payer_name"
                                geekui:customTypeface="fonts/vazir_regular.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/account_details_text"
                                android:textSize="15dp"
                                android:text="-"
                                android:layout_marginRight="2dp"/>

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                geekui:customTypeface="fonts/vazir_regular.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/account_details_text"
                                android:textSize="15dp"
                                android:text="@string/purchase_payment_payer_name"/>

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/purchase_payer_cell_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/account_details_text"
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="8dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:gravity="right">

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                android:id="@+id/purchase_payer_cell"
                                geekui:customTypeface="fonts/vazir_regular.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/account_details_text"
                                android:textSize="15dp"
                                android:layout_marginRight="2dp"
                                android:text="-"/>

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                geekui:customTypeface="fonts/vazir_regular.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/account_details_text"
                                android:textSize="15dp"
                                android:text="@string/purchase_payment_payer_cell"/>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/account_details_text"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:id="@+id/displayKeyboard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_margin="8dp"
                        android:layout_gravity="center_horizontal">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="50dp">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_centerInParent="true">

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    android:id="@+id/input_digit_1"
                                    geekui:customTypeface="fonts/vazir_regular_bold.ttf"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:textColor="@color/account_details_text"
                                    android:textSize="20dp"
                                    android:gravity="bottom|center_horizontal"
                                    android:layout_gravity="center"
                                    android:background="@drawable/sms_value_border"
                                    android:layout_margin="4dp" />


                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    android:id="@+id/input_digit_2"
                                    geekui:customTypeface="fonts/vazir_regular_bold.ttf"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:textColor="@color/account_details_text"
                                    android:textSize="20dp"
                                    android:gravity="bottom|center_horizontal"
                                    android:layout_gravity="center"
                                    android:background="@drawable/sms_value_border"
                                    android:layout_margin="4dp"/>

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    android:id="@+id/input_digit_3"
                                    geekui:customTypeface="fonts/vazir_regular_bold.ttf"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:textColor="@color/account_details_text"
                                    android:textSize="20dp"
                                    android:gravity="bottom|center_horizontal"
                                    android:layout_gravity="center"
                                    android:background="@drawable/sms_value_border"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginRight="8dp"/>

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    android:id="@+id/input_digit_4"
                                    geekui:customTypeface="fonts/vazir_regular_bold.ttf"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:textColor="@color/account_details_text"
                                    android:textSize="20dp"
                                    android:gravity="bottom|center_horizontal"
                                    android:layout_gravity="center"
                                    android:background="@drawable/sms_value_border"
                                    android:layout_marginRight="4dp"
                                    android:layout_marginLeft="8dp"/>

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    android:id="@+id/input_digit_5"
                                    geekui:customTypeface="fonts/vazir_regular_bold.ttf"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:textColor="@color/account_details_text"
                                    android:textSize="20dp"
                                    android:gravity="bottom|center_horizontal"
                                    android:layout_gravity="center"
                                    android:background="@drawable/sms_value_border"
                                    android:layout_margin="4dp"/>

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    android:id="@+id/input_digit_6"
                                    geekui:customTypeface="fonts/vazir_regular_bold.ttf"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:textColor="@color/account_details_text"
                                    android:textSize="20dp"
                                    android:gravity="bottom|center_horizontal"
                                    android:layout_gravity="center"
                                    android:background="@drawable/sms_value_border"
                                    android:layout_margin="4dp"/>


                            </LinearLayout>


                        </RelativeLayout>


                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/account_details_text"
                        android:layout_margin="8dp"/>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:visibility="visible">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp">

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                geekui:customTypeface="fonts/vazir_regular.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/account_details_text"
                                android:textSize="20sp"
                                android:text="@string/request_payment_rial"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="2dp"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="2dp"
                                android:gravity="left">

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    geekui:customTypeface="fonts/vazir_regular.ttf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/account_details_text"
                                    android:textSize="14sp"
                                    android:text="@string/currency_rials"/>

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    android:id="@+id/paymentPriceValue"
                                    geekui:customTypeface="fonts/vazir_regular_bold.ttf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/account_details_text"
                                    android:textSize="20sp"
                                    android:layout_marginLeft="2dp"/>

                            </LinearLayout>




                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/account_details_text"
                            android:layout_margin="8dp"/>



                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp">

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                geekui:customTypeface="fonts/vazir_regular.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/account_details_text"
                                android:textSize="15sp"
                                android:text="@string/request_payment_vat"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="2dp"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="2dp"
                                android:gravity="left">

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    geekui:customTypeface="fonts/vazir_regular.ttf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/account_details_text"
                                    android:textSize="14sp"
                                    android:text="@string/currency_rials"/>

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    android:id="@+id/paymentVAT"
                                    geekui:customTypeface="fonts/vazir_regular_bold.ttf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/account_details_text"
                                    android:textSize="15sp"
                                    android:layout_marginLeft="2dp"/>

                            </LinearLayout>




                        </RelativeLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/account_details_text"
                            android:layout_margin="8dp"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp">

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                geekui:customTypeface="fonts/vazir_regular.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/account_details_text"
                                android:textSize="15sp"
                                android:text="@string/request_payment_fee"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="2dp"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="2dp">

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    geekui:customTypeface="fonts/vazir_regular.ttf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/account_details_text"
                                    android:textSize="14sp"
                                    android:text="@string/currency_rials"/>

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    android:id="@+id/paymentFeeValue"
                                    geekui:customTypeface="fonts/vazir_regular_bold.ttf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/account_details_text"
                                    android:textSize="15sp"
                                    android:layout_marginLeft="2dp"/>

                            </LinearLayout>




                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/account_details_text"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="8dp"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:background="@color/total_amount_bg">

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                geekui:customTypeface="fonts/vazir_regular_bold.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/page_title"
                                android:textSize="22sp"
                                android:text="@string/request_payment_total"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="2dp"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="2dp">

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    geekui:customTypeface="fonts/vazir_regular.ttf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/page_title"
                                    android:textSize="14sp"
                                    android:text="@string/currency_rials"/>

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    android:id="@+id/paymentTotalValue"
                                    geekui:customTypeface="fonts/vazir_regular_bold.ttf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/page_title"
                                    android:textSize="22sp"
                                    android:layout_marginLeft="2dp"/>

                            </LinearLayout>




                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/account_details_text"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="8dp"/>



                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/creditInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <include layout="@layout/masked_card_number"/>

                                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                        android:id="@+id/cardNumberValue"
                                        geekui:customTypeface="fonts/vazir_regular.ttf"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/account_details_text"
                                        android:textSize="15dp"
                                        android:layout_marginRight="8dp"/>
                                </LinearLayout>

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    geekui:customTypeface="fonts/vazir_regular.ttf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/account_details_text"
                                    android:textSize="15dp"
                                    android:text="@string/card_number"
                                    android:layout_gravity="right"
                                    android:layout_alignParentRight="true"/>


                            </RelativeLayout>

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                android:id="@+id/bankName"
                                geekui:customTypeface="fonts/vazir_regular.ttf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/account_details_text"
                                android:textSize="15dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginLeft="8dp"
                                android:gravity="right"
                                android:text="بانک"/>

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="8dp">

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                android:id="@+id/pin2Text"
                                geekui:customTypeface="fonts/vazir_regular.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/account_details_text"
                                android:textSize="15dp"
                                android:text="@string/user_pin2"
                                android:gravity="center_vertical"
                                android:layout_gravity="center_vertical"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"/>

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                geekui:customTypeface="fonts/vazir_regular.ttf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/app_origin"
                                android:textSize="11dp"
                                android:text="@string/shaparak_privacy_message"
                                android:layout_toLeftOf="@id/pin2Text"
                                android:layout_centerVertical="true"/>

                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:orientation="horizontal"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp">

                            <RelativeLayout
                                android:id="@+id/pin_layout"
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="0.75"
                                android:background="@drawable/card_info_empty_placeholder"
                                android:layout_margin="1dp">

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    android:id="@+id/pin_text"
                                    geekui:customTypeface="fonts/vazir_regular.ttf"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textSize="15dp"
                                    android:textColor="@color/account_details_text"
                                    android:singleLine="true"
                                    android:maxLength="20"
                                    android:inputType="number"
                                    android:background="@color/transparency"
                                    android:gravity="center"
                                    android:layout_centerVertical="true"
                                    android:hint="@string/user_pin2"/>

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/cvv_layout"
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="0.25"
                                android:background="@drawable/card_info_empty_placeholder"
                                android:layout_margin="1dp">

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    android:id="@+id/cvv_text"
                                    geekui:customTypeface="fonts/vazir_regular.ttf"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textSize="15dp"
                                    android:textColor="@color/account_details_text"
                                    android:singleLine="true"
                                    android:maxLength="4"
                                    android:inputType="number"
                                    android:background="@color/transparency"
                                    android:gravity="center"
                                    android:layout_centerVertical="true"
                                    android:hint="@string/user_cvv2"/>

                            </RelativeLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/pay_to_business_button"
                        android:layout_width="128dp"
                        android:layout_height="128dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/hampay_payment_button"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="160dp"/>

                </LinearLayout>


            </ScrollView>


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/keyboard"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <include
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/numeric_keyboard"/>
    </LinearLayout>


</RelativeLayout>
