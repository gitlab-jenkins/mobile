<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:onClick="backActionBar"
                android:padding="12dp"
                android:src="@drawable/back" />

            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="8dp"
                android:text="@string/request_pay_detail"
                android:textColor="@color/app_origin"
                android:textSize="18sp"
                geekui:customTypeface="fonts/vazir_regular.ttf" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/app_origin" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:id="@+id/paymentScroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="2dp"
                                android:gravity="right"
                                android:orientation="vertical">

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    android:id="@+id/business_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/main_menu_title"
                                    android:textSize="15sp"
                                    geekui:customTypeface="fonts/vazir_regular.ttf" />

                            </LinearLayout>

                            <FrameLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp">

                                <ImageView
                                    android:id="@+id/business_image"
                                    android:layout_width="44dp"
                                    android:layout_height="44dp"
                                    android:layout_gravity="center"
                                    android:background="@color/page_title"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/user_placeholder" />

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:background="@drawable/curve_images" />

                            </FrameLayout>

                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/purchase_status_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="4dp"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                android:id="@+id/purchase_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="2dp"
                                android:textColor="@color/account_details_text"
                                android:textSize="15dp"
                                geekui:customTypeface="fonts/vazir_regular.ttf" />

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/purchase_payment_status"
                                android:textColor="@color/account_details_text"
                                android:textSize="15dp"
                                geekui:customTypeface="fonts/vazir_regular.ttf" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/purchase_payer_name_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="4dp"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                android:id="@+id/purchase_payer_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="2dp"
                                android:text="-"
                                android:textColor="@color/account_details_text"
                                android:textSize="15dp"
                                geekui:customTypeface="fonts/vazir_regular.ttf" />

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/purchase_payment_payer_name"
                                android:textColor="@color/account_details_text"
                                android:textSize="15dp"
                                geekui:customTypeface="fonts/vazir_regular.ttf" />

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/purchase_payer_cell_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="4dp"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                android:id="@+id/purchase_payer_cell"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="2dp"
                                android:text="-"
                                android:textColor="@color/account_details_text"
                                android:textSize="15dp"
                                geekui:customTypeface="fonts/vazir_regular.ttf" />

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/purchase_payment_payer_cell"
                                android:textColor="@color/account_details_text"
                                android:textSize="15dp"
                                geekui:customTypeface="fonts/vazir_regular.ttf" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/displayKeyboard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="4dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="50dp">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="horizontal">

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    android:id="@+id/input_digit_1"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="4dp"
                                    android:background="@drawable/business_code_holder"
                                    android:gravity="bottom|center_horizontal"
                                    android:textColor="@color/app_origin"
                                    android:textSize="20dp"
                                    geekui:customTypeface="fonts/vazir_regular_bold.ttf" />


                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    android:id="@+id/input_digit_2"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="4dp"
                                    android:background="@drawable/business_code_holder"
                                    android:gravity="bottom|center_horizontal"
                                    android:textColor="@color/app_origin"
                                    android:textSize="20dp"
                                    geekui:customTypeface="fonts/vazir_regular_bold.ttf" />

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    android:id="@+id/input_digit_3"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginRight="8dp"
                                    android:background="@drawable/business_code_holder"
                                    android:gravity="bottom|center_horizontal"
                                    android:textColor="@color/app_origin"
                                    android:textSize="20dp"
                                    geekui:customTypeface="fonts/vazir_regular_bold.ttf" />

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    android:id="@+id/input_digit_4"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="4dp"
                                    android:background="@drawable/business_code_holder"
                                    android:gravity="bottom|center_horizontal"
                                    android:textColor="@color/app_origin"
                                    android:textSize="20dp"
                                    geekui:customTypeface="fonts/vazir_regular_bold.ttf" />

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    android:id="@+id/input_digit_5"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="4dp"
                                    android:background="@drawable/business_code_holder"
                                    android:gravity="bottom|center_horizontal"
                                    android:textColor="@color/app_origin"
                                    android:textSize="20dp"
                                    geekui:customTypeface="fonts/vazir_regular_bold.ttf" />

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    android:id="@+id/input_digit_6"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="4dp"
                                    android:background="@drawable/business_code_holder"
                                    android:gravity="bottom|center_horizontal"
                                    android:textColor="@color/app_origin"
                                    android:textSize="20dp"
                                    geekui:customTypeface="fonts/vazir_regular_bold.ttf" />


                            </LinearLayout>


                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp">

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="2dp"
                                android:text="@string/request_payment_rial"
                                android:textColor="@color/account_details_text"
                                android:textSize="20sp"
                                geekui:customTypeface="fonts/vazir_regular.ttf" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:gravity="left"
                                android:orientation="horizontal">

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/currency_rials"
                                    android:textColor="@color/account_details_text"
                                    android:textSize="14sp"
                                    geekui:customTypeface="fonts/vazir_regular.ttf" />

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    android:id="@+id/paymentPriceValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="2dp"
                                    android:textColor="@color/account_details_text"
                                    android:textSize="20sp"
                                    geekui:customTypeface="fonts/vazir_regular_bold.ttf" />

                            </LinearLayout>


                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#f5f5f5"
                            android:padding="8dp">

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="2dp"
                                android:text="@string/request_payment_vat"
                                android:textColor="@color/account_details_text"
                                android:textSize="15sp"
                                geekui:customTypeface="fonts/vazir_regular.ttf" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:gravity="left"
                                android:orientation="horizontal">

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/currency_rials"
                                    android:textColor="@color/account_details_text"
                                    android:textSize="14sp"
                                    geekui:customTypeface="fonts/vazir_regular.ttf" />

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    android:id="@+id/paymentVAT"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="2dp"
                                    android:textColor="@color/account_details_text"
                                    android:textSize="15sp"
                                    geekui:customTypeface="fonts/vazir_regular_bold.ttf" />

                            </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp">

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="2dp"
                                android:text="@string/request_payment_fee"
                                android:textColor="@color/account_details_text"
                                android:textSize="15sp"
                                geekui:customTypeface="fonts/vazir_regular.ttf" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:orientation="horizontal">

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/currency_rials"
                                    android:textColor="@color/account_details_text"
                                    android:textSize="14sp"
                                    geekui:customTypeface="fonts/vazir_regular.ttf" />

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    android:id="@+id/paymentFeeValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="2dp"
                                    android:textColor="@color/account_details_text"
                                    android:textSize="15sp"
                                    geekui:customTypeface="fonts/vazir_regular_bold.ttf" />

                            </LinearLayout>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:background="#f5f5f5"
                            android:padding="8dp">

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="2dp"
                                android:text="@string/request_payment_total"
                                android:textColor="@color/page_title"
                                android:textSize="22sp"
                                geekui:customTypeface="fonts/vazir_regular_bold.ttf" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="2dp"
                                android:orientation="horizontal">

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/currency_rials"
                                    android:textColor="@color/page_title"
                                    android:textSize="14sp"
                                    geekui:customTypeface="fonts/vazir_regular.ttf" />

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    android:id="@+id/paymentTotalValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="2dp"
                                    android:textColor="@color/page_title"
                                    android:textSize="22sp"
                                    geekui:customTypeface="fonts/vazir_regular_bold.ttf" />

                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/creditInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:visibility="visible">

                        <RelativeLayout
                            android:id="@+id/cardPlaceHolder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/card_select_placeholder">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_alignParentRight="true"
                                android:layout_margin="2dp"
                                android:background="@color/app_origin"
                                android:padding="4dp"
                                android:src="@drawable/select_card" />

                            <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                android:id="@+id/selectCardText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="50dp"
                                android:padding="4dp"
                                android:text="@string/select_card_number"
                                android:textColor="@color/app_origin"
                                android:textSize="12dp"
                                android:visibility="visible"
                                geekui:customTypeface="fonts/vazir_regular.ttf" />

                            <LinearLayout
                                android:id="@+id/cardSelect"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="50dp"
                                android:orientation="vertical"
                                android:padding="4dp"
                                android:visibility="gone">

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    android:id="@+id/bankName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_gravity="right"
                                    android:text="@string/bank"
                                    android:textColor="@color/app_origin"
                                    android:textSize="13dp"
                                    geekui:customTypeface="fonts/vazir_regular.ttf" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <include layout="@layout/masked_card_number" />

                                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                        android:id="@+id/cardNumberValue"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="8dp"
                                        android:textColor="@android:color/black"
                                        android:textSize="15dp"
                                        geekui:customTypeface="fonts/vazir_regular.ttf" />
                                </LinearLayout>

                            </LinearLayout>

                        </RelativeLayout>

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="8dp"
                            android:text="@string/shaparak_privacy_message"
                            android:textColor="@color/app_origin"
                            android:textSize="11dp"
                            geekui:customTypeface="fonts/vazir_regular.ttf" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:id="@+id/pin_layout"
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_margin="1dp"
                                android:layout_weight="0.75"
                                android:background="@drawable/card_info_empty_placeholder">

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    android:id="@+id/pin_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true"
                                    android:background="@color/transparency"
                                    android:gravity="center"
                                    android:hint="@string/user_pin2"
                                    android:inputType="number"
                                    android:lines="1"
                                    android:maxLength="12"
                                    android:textColor="@color/account_details_text"
                                    android:textSize="15dp"
                                    geekui:customTypeface="fonts/vazir_regular.ttf" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/cvv_layout"
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_margin="1dp"
                                android:layout_weight="0.25"
                                android:background="@drawable/card_info_empty_placeholder">

                                <xyz.homapay.hampay.mobile.android.component.FacedTextView
                                    android:id="@+id/cvv_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true"
                                    android:background="@color/transparency"
                                    android:gravity="center"
                                    android:hint="@string/user_cvv2"
                                    android:inputType="number"
                                    android:lines="1"
                                    android:maxLength="4"
                                    android:textColor="@color/account_details_text"
                                    android:textSize="15dp"
                                    geekui:customTypeface="fonts/vazir_regular.ttf" />

                            </RelativeLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/pay_to_business_button"
                        android:layout_width="128dp"
                        android:layout_height="128dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/hampay_payment_button" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="160dp" />

                </LinearLayout>


            </ScrollView>


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/keyboard"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <include
            layout="@layout/numeric_keyboard"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


</RelativeLayout>
