<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/nav_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/back_actionbar"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:padding="12dp"
            android:clickable="true"
            android:onClick="backActionBar"/>

        <xyz.homapay.hampay.mobile.android.component.FacedTextView
            geekui:customTypeface="fonts/iran_sans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:text="@string/request_pay_detail"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="64dp"/>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/activation_holder"
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:contentDescription="activation_holder">


                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/input_digit_1"
                        geekui:customTypeface="fonts/iran_sans_bold.ttf"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/register_btn_color"
                        android:textSize="20dp"
                        android:gravity="bottom|center_horizontal"
                        android:layout_gravity="center"
                        android:background="@drawable/remember_edittext_bg"
                        android:layout_margin="8dp" />


                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/input_digit_2"
                        geekui:customTypeface="fonts/iran_sans_bold.ttf"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/register_btn_color"
                        android:textSize="20dp"
                        android:gravity="bottom|center_horizontal"
                        android:layout_gravity="center"
                        android:background="@drawable/remember_edittext_bg"
                        android:layout_margin="8dp"/>

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/input_digit_3"
                        geekui:customTypeface="fonts/iran_sans_bold.ttf"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/register_btn_color"
                        android:textSize="20dp"
                        android:gravity="bottom|center_horizontal"
                        android:layout_gravity="center"
                        android:background="@drawable/remember_edittext_bg"
                        android:layout_margin="8dp"/>

                    <View
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/input_digit_4"
                        geekui:customTypeface="fonts/iran_sans_bold.ttf"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/register_btn_color"
                        android:textSize="20dp"
                        android:gravity="bottom|center_horizontal"
                        android:layout_gravity="center"
                        android:background="@drawable/remember_edittext_bg"
                        android:layout_margin="8dp"/>

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/input_digit_5"
                        geekui:customTypeface="fonts/iran_sans_bold.ttf"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/register_btn_color"
                        android:textSize="20dp"
                        android:gravity="bottom|center_horizontal"
                        android:layout_gravity="center"
                        android:background="@drawable/remember_edittext_bg"
                        android:layout_margin="8dp"/>

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/input_digit_6"
                        geekui:customTypeface="fonts/iran_sans_bold.ttf"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/register_btn_color"
                        android:textSize="20dp"
                        android:gravity="bottom|center_horizontal"
                        android:layout_gravity="center"
                        android:background="@drawable/remember_edittext_bg"
                        android:layout_margin="8dp"/>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/business_logo"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        android:id="@+id/business_name"
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="15dp"
                            android:text="@string/request_payment_rial"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>


                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white">


                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            android:id="@+id/paymentPriceValue"
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/normal_text"
                            android:textSize="25dp"
                            android:gravity="center_horizontal" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="15dp"
                            android:text="@string/request_payment_fee"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white">


                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            android:id="@+id/paymentFeeValue"
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/normal_text"
                            android:textSize="20dp"
                            android:gravity="center_horizontal" />


                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="15dp"
                            android:text="@string/card_nubmer"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/hampay_colored"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/entry_field_bg">


                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            android:id="@+id/cardNumberValue"
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/normal_text"
                            android:textSize="20dp"
                            android:gravity="center"
                            android:layout_centerInParent="true"/>


                        <!--<xyz.homapay.hampay.mobile.android.component.edittext.FacedEditText-->
                        <!--android:layout_width="fill_parent"-->
                        <!--android:layout_height="fill_parent"-->
                        <!--android:background="@android:color/transparent"-->
                        <!--android:textSize="15dp"-->
                        <!--android:padding="6dp"-->
                        <!--android:textColor="@color/normal_text"-->
                        <!--android:singleLine="true"-->
                        <!--android:text="۶۳۶۲-۲۳۲۸-۲۸۲۹-۲۸۲۲"-->
                        <!--android:inputType="number"-->
                        <!--android:lines="1"-->
                        <!--android:contentDescription="price"/>-->


                    </RelativeLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <xyz.homapay.hampay.mobile.android.component.FacedTextView
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="15dp"
                            android:text="@string/user_pin2"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/entry_field_bg">

                        <ImageView
                            android:id="@+id/pin2ValueIcon"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"/>


                        <xyz.homapay.hampay.mobile.android.component.edittext.FacedEditText
                            android:id="@+id/pin2Value"
                            geekui:customTypeface="fonts/iran_sans.ttf"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@android:color/transparent"
                            android:textSize="20dp"
                            android:padding="6dp"
                            android:textColor="@color/normal_text"
                            android:singleLine="true"
                            android:inputType="numberPassword"
                            android:lines="1"
                            android:contentDescription="price"
                            android:maxLength="12"
                            android:layout_marginLeft="48dp"
                            android:gravity="center_vertical"/>


                    </RelativeLayout>


                </LinearLayout>


                <RelativeLayout
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal">


                    <xyz.homapay.hampay.mobile.android.component.material.ButtonRectangle
                        android:id="@+id/pay_to_business_button"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerHorizontal="true"
                        android:background="@color/register_btn_color"
                        android:textSize="15dp"
                        android:contentDescription="pay"/>

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:textColor="@android:color/white"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="@string/pay_with_hampay"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal">


                    <xyz.homapay.hampay.mobile.android.component.material.ButtonRectangle
                        android:id="@+id/cancel_pay_to_business_button"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerHorizontal="true"
                        android:background="@color/colorPrimary"
                        android:textSize="15dp"
                        android:contentDescription="pay"/>

                    <xyz.homapay.hampay.mobile.android.component.FacedTextView
                        geekui:customTypeface="fonts/iran_sans.ttf"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:textColor="@android:color/white"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="@string/cancel_pay_with_hampay"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp" />

                </RelativeLayout>



            </LinearLayout>


        </ScrollView>


    </RelativeLayout>


</LinearLayout>
