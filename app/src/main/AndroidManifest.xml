<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hampay.mobile.android" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/MyMaterialTheme" >
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SplashActivity"
            android:label="@string/title_activity_intro" >
        </activity>
        <activity
            android:name=".activity.IntroSliderActivity"
            android:label="@string/title_activity_intro_slider" >
        </activity>
        <activity
            android:name=".activity.StartActivity"
            android:label="@string/title_activity_start" >
        </activity>
        <activity
            android:name=".activity.PostStartActivity"
            android:label="@string/title_activity_post_start" >
        </activity>
        <activity
            android:name=".activity.ProfileEntryActivity"
            android:label="@string/title_activity_profile_entry"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".activity.VerificationActivity"
            android:label="@string/title_activity_verification" >
        </activity>
        <activity
            android:name=".activity.PostVerificationActivity"
            android:label="@string/title_activity_post_verification" >
        </activity>
        <activity
            android:name=".activity.ConfirmAccountNoActivity"
            android:label="@string/title_activity_confirm_account_no" >
        </activity>
        <activity
            android:name=".activity.ConfirmInfoActivity"
            android:label="@string/title_activity_confirm_info"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".activity.VerifyAccountNoActivity"
            android:label="@string/title_activity_verify_account_no" >
        </activity>
        <activity
            android:name=".activity.PrePasswordActivity"
            android:label="@string/title_activity_pre_password" >
        </activity>
        <activity
            android:name=".activity.PasswordEntryActivity"
            android:label="@string/title_activity_password_entry" >
        </activity>
        <activity
            android:name=".activity.RememberPhraseActivity"
            android:label="@string/title_activity_remember_phrase"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".activity.CompleteRegistrationActivity"
            android:label="@string/title_activity_complete_registration" >
        </activity>
        <activity
            android:name=".activity.HamPayLoginActivity"
            android:label="@string/title_activity_transaction_detail" >
        </activity>
        <activity
            android:name=".activity.TransactionDetailActivity"
            android:label="@string/title_activity_transaction_detail" >
        </activity>
        <activity
            android:name=".activity.PayOneActivity"
            android:label="@string/title_activity_pay_one" >
        </activity>
        <activity
            android:name=".activity.PayBusinessActivity"
            android:label="@string/title_activity_pay_one" >
        </activity>

        <service android:name=".account.AuthenticationService" >
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>
        <service
            android:name=".account.SyncService"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/syncadapter" />
            <meta-data
                android:name="android.provider.CONTACTS_STRUCTURE"
                android:resource="@xml/contacts" />
        </service>

        <activity
            android:name=".account.AuthenticatorActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".account.ViewingActivity"
            android:exported="true"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="vnd.android.cursor.item/com.hampay.mobile" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ChangePasswordActivity"
            android:label="@string/title_activity_change_password" >
        </activity>
        <activity
            android:name=".activity.ChangeMemorableActivity"
            android:label="@string/title_activity_change_memorable" >
        </activity>
        <activity
            android:name=".activity.ChangeMemorablePassActivity"
            android:label="@string/title_activity_change_memorable_pass" >
        </activity>
    </application>

</manifest>
